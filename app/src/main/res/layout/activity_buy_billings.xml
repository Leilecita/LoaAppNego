<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/background"
    android:descendantFocusability="blocksDescendants"
    android:layout_height="match_parent"
    android:id="@+id/listado">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/toolbar"
            android:background="@color/colorPrimary">

            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/line_home"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:id="@+id/home"
                    android:src="@drawable/returnn"
                    android:layout_marginRight="4dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/opensansregular"
                    android:layout_marginLeft="8dp"
                    android:id="@+id/title"
                    android:text="  Facturaciones paralelas"
                    android:textSize="@dimen/title_text"
                    android:textColor="@color/white"
                    />

            </LinearLayout>
        </androidx.appcompat.widget.Toolbar>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="12dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:background="@drawable/rec_text_edit"
                android:gravity="center_vertical"
                android:paddingLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/date_since"
                    android:layout_height="37dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="8dp"
                    android:fontFamily="@font/opensanslight"
                    style="@style/Widget.Design.TextInputLayout"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:textColor="@color/colorPrimaryDarkLetter"
                    android:hint="desde"
                    android:textColorHint="@color/clearhintletter"
                    android:textSize="@dimen/general_text"
                    android:background="@drawable/rec_text_edit"
                    android:inputType="textCapWords" />


                <ImageView
                    android:layout_width="wrap_content"
                    android:src="@drawable/delete_viol"
                    android:id="@+id/clean_dateSince"
                    android:layout_gravity="center"
                    android:alpha="0.4"
                    android:paddingRight="8dp"
                    android:paddingLeft="8dp"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:background="@drawable/rec_text_edit"
                android:gravity="center_vertical"
                android:layout_marginLeft="4dp"
                android:paddingLeft="4dp"
                android:layout_height="wrap_content">


                <TextView
                    android:id="@+id/date_to"
                    android:layout_height="37dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="8dp"
                    android:hint="hasta"
                    android:textColorHint="@color/clearhintletter"
                    style="@style/Widget.Design.TextInputLayout"
                    android:fontFamily="@font/opensanslight"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:textColor="@color/colorPrimaryDarkLetter"
                    android:textSize="@dimen/general_text"
                    android:background="@drawable/rec_text_edit"
                    android:inputType="textCapWords" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:src="@drawable/delete_viol"
                    android:id="@+id/clean_dateTo"
                    android:alpha="0.4"
                    android:layout_gravity="center"
                    android:paddingRight="8dp"
                    android:paddingLeft="8dp"
                    android:layout_height="wrap_content"
                    />

            </LinearLayout>

        </LinearLayout>


        <ProgressBar
            android:id="@+id/simpleProgressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:progress="50"
            android:layout_marginTop="20dp"
            android:visibility="gone"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/empty"
            android:textSize="18sp"
            android:visibility="gone"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"
            android:text="No hay pedidos para entregar"


            />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/list_report_moeny_movements"
            android:layout_width="match_parent"
            android:layout_marginTop="12dp"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:paddingBottom="90dp"

            />



    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:paddingRight="12dp"
        android:paddingLeft="12dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:layout_gravity="bottom"
        android:layout_margin="16dp"
        android:backgroundTint="@color/violetClear"
        android:background="@drawable/rec_find"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_gravity="center"
                android:textColor="@color/colorPrimaryClearLetter"
                android:text="Art ingresados:"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:paddingLeft="4dp"
                android:id="@+id/cant_art"
                android:layout_gravity="center"
                android:textColor="@color/colorPrimaryDarkLetter"
                android:text=""
                />



        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"

            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_gravity="center"
                android:textColor="@color/colorPrimaryClearLetter"
                android:text="$ ingresado:"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:paddingLeft="4dp"
                android:fontFamily="@font/opensanslight"
                android:id="@+id/tot_amount"
                android:layout_gravity="center"
                android:textColor="@color/colorPrimaryDarkLetter"
                android:text=""
                />



        </LinearLayout>

    </LinearLayout>





    <LinearLayout
        android:layout_width="65dp"
        android:background="@drawable/bblanco"
        android:backgroundTint="@color/colorPrimary"
        android:layout_gravity="bottom|right"
        android:layout_margin="30dp"
        android:id="@+id/fab_agregarTod"
        android:layout_alignParentBottom="true"
        android:layout_height="65dp">


        <ImageView
            android:layout_width="match_parent"
            android:padding="18dp"
            android:id="@+id/image_button"
            android:layout_height="match_parent"
            android:src="@drawable/add3"
            />

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
