<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:layout_marginRight="12dp"
    android:layout_marginLeft="12dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:id="@+id/type"
                    android:text="Remera"
                    android:textColor="@android:color/black"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="left"
                    android:id="@+id/brand"
                    android:text=" Oneill"
                    android:textColor="@android:color/black"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/stock"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_gravity="right|center"
                    android:text="34"
                    android:textColor="@color/word"
                    android:textSize="18sp" />
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="15dp"
                    android:padding="2dp"
                    android:id="@+id/salir"
                    android:visibility="gone"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/close"
                    />



            </LinearLayout>




        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:padding="4dp"
        android:layout_marginTop="6dp"
        android:id="@+id/line_options"
        android:visibility="gone"
        android:layout_height="wrap_content">


        <ImageView
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:id="@+id/delete_product"
            android:src="@drawable/dustbin"
            android:layout_height="25dp" />
        <ImageView
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:id="@+id/see_balance"
            android:src="@drawable/balance"
            android:layout_height="25dp" />



        <ImageView
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:id="@+id/add_stock"
            android:src="@drawable/addp"
            android:padding="5dp"
            android:layout_height="25dp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:id="@+id/less_stock"
            android:src="@drawable/lesspe"
            android:padding="5dp"
            android:layout_height="25dp" />





    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/update_stock"
        android:visibility="gone"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/setQuantity"
            android:layout_marginTop="6dp"
            android:layout_height="wrap_content">



            <TextView
                style="@style/CodeFontInput"
                android:layout_height="40dp"
                android:hint="Detalle"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:id="@+id/detail"/>

            <EditText
                style="@style/CodeFontInput"
                android:layout_gravity="center_vertical"
                android:layout_width="160dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:inputType="number"
                android:hint="+"
                android:id="@+id/load_stock"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="right"
            android:layout_marginTop="6dp"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ok"
                android:id="@+id/button_ok"

                android:layout_gravity="right"
                />


        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="6dp"
        style="@style/DivisorCategoryStyle"/>
</LinearLayout>
