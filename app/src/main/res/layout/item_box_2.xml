<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    android:layout_marginLeft="4dp"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:layout_width="55sp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/date"
                android:paddingLeft="5dp"
                android:textColor="@color/word"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:text="10-11"
                android:textSize="17sp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/year"
                android:paddingLeft="5dp"
                android:visibility="gone"
                android:textColor="@color/word"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:text="2019"
                android:textSize="15sp"
                />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="4dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:id="@+id/venta_ctdo"
                android:layout_weight="1"
                android:gravity="center_horizontal"

                android:textColor="@color/word"
                android:textSize="17sp"
                android:layout_height="wrap_content"
                android:text="10/9"
                />

            <TextView
                android:layout_width="match_parent"
                android:id="@+id/card"
                android:textColor="@color/word"
                android:textSize="17sp"
                android:gravity="center_horizontal"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="10019"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:textColor="@color/word"
                android:gravity="center_horizontal"
                android:textSize="17sp"
                android:id="@+id/total_amount"
                android:layout_height="wrap_content"
                android:text="11900"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:id="@+id/rest_box"
                android:textColor="@color/word"
                android:textSize="17sp"
                android:gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:text="111111"
                />
            <TextView
                android:layout_width="match_parent"
                android:id="@+id/dep"
                android:textColor="@color/word"
                android:gravity="center_horizontal"
                android:layout_weight="1"
                android:textSize="17sp"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:text="11233"
                />


        </LinearLayout>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginRight="4dp"
        android:id="@+id/line_photos"
        android:visibility="gone"
        android:layout_marginTop="8dp"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:elevation="2dp"
            android:layout_margin="4dp"
            android:id="@+id/photobox"
            android:backgroundTint="@color/colorPrimaryClear"
            android:layout_height="35dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_height="wrap_content">
            <ImageView
                android:layout_width="20dp"
                android:src="@drawable/camera"
                android:layout_height="20dp"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:textColor="#ffff"
                android:text="Foto caja"
                />
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:id="@+id/photoposnet"
            android:backgroundTint="@color/colorPrimaryClear"
            android:orientation="horizontal"
            android:elevation="2dp"
            android:layout_margin="4dp"
            android:layout_height="35dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="20dp"
                    android:src="@drawable/camera"
                    android:layout_height="20dp"

                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_height="wrap_content"
                    android:textColor="#ffff"
                    android:text="Foto posnet"
                    />

            </LinearLayout>



        </androidx.cardview.widget.CardView>


    </LinearLayout>
    <TextView

        android:layout_marginLeft="0dp"
        android:layout_marginTop="8dp"
        android:id="@+id/div"
        style="@style/DivisorCategoryStyle"
        />
</LinearLayout>
