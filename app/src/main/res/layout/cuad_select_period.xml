<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view_mistake"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rec_dialog"
    android:backgroundTint="@color/background"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dialog_margin_bottom"
        android:layout_marginTop="@dimen/dialog_margin_top"
        android:layout_marginLeft="@dimen/dialog_margin_left"
        android:layout_marginRight="@dimen/dialog_margin_right"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="Listado por perÃ­odo"
            android:textSize="17sp"
            android:textColor="@color/colorPrimaryDarkLetter"
            android:textColorHint="@color/colorPrimaryClearLetter"
            android:gravity="center"
            android:fontFamily="@font/opensansregular"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="2dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:orientation="vertical">



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:textColor="@color/colorPrimaryDarkLetter"
                android:text="Desde"
                android:paddingLeft="4dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/rec_text_edit"
                android:orientation="horizontal"
                >

                <ImageView
                    android:layout_width="24dp"
                    android:id="@+id/date_picker"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/date"
                    />
                <TextView
                    android:id="@+id/dateSince"
                    android:layout_height="33dp"
                    android:paddingLeft="8dp"
                    style="@style/Widget.Design.TextInputLayout"
                    android:textColorHint="@color/colorPrimaryClearLetter"
                    android:layout_width="match_parent"
                    android:textColor="@color/colorPrimaryDarkLetter"
                    android:textSize="16sp"
                    android:gravity="center_vertical"
                    android:layout_weight="1"
                />


            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:textColor="@color/colorPrimaryDarkLetter"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:text="Hasta"
                android:paddingLeft="4dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="12dp"
                android:background="@drawable/rec_text_edit"
                android:orientation="horizontal"
                >

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/date"
                    />


                <TextView
                    android:id="@+id/dateTo"
                    android:layout_height="33dp"
                    android:paddingLeft="8dp"
                    style="@style/Widget.Design.TextInputLayout"
                    android:layout_width="match_parent"
                    android:textColor="@color/colorPrimaryDarkLetter"
                    android:textSize="16sp"
                    android:gravity="center_vertical"
                    android:layout_weight="1"
                    />


            </LinearLayout>

        </LinearLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:id="@+id/cancel"
                android:layout_weight="1"
                android:text="CANCELAR"
                android:gravity="center"
                android:textColor="@color/colorDialogButton"
                android:textStyle="bold"
                />

            <Button
                android:layout_width="match_parent"
                android:background="@drawable/rec_dialog"
                android:backgroundTint="@color/colorDialogButton"
                android:id="@+id/ok"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:textColor="#ffff"
                android:padding="4dp"
                android:text="guardar"/>

        </LinearLayout>

    </LinearLayout>
    </LinearLayout>




