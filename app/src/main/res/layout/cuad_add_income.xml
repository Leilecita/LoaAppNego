<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view_mistake"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    card_view:cardCornerRadius="5dp"
    card_view:cardElevation="2dp"
    card_view:cardMaxElevation="4dp"
    android:backgroundTint="#fff"
    card_view:contentPadding="16dp"
    >

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="Seña "
            android:textSize="24sp"
            android:textColor="@color/title_dialog_info"
            android:gravity="center"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="2dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                >


                <TextView
                    android:layout_width="70dp"
                    android:layout_height="35dp"
                    android:textColor="@color/word"
                    android:id="@+id/date_picker"
                    android:textSize="20sp"
                    android:text="Fecha"
                    android:layout_gravity="center_vertical|left"
                    android:gravity="center_vertical|left"
                    />


                <TextView
                    android:id="@+id/date"
                    android:layout_height="35dp"
                    style="@style/Widget.Design.TextInputLayout"
                    android:layout_width="match_parent"
                    android:textColor="@color/word"
                    android:text=""
                    android:textSize="18sp"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical"
                    android:inputType="textCapWords" />


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="70dp"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:layout_height="35dp"
                android:textColor="@color/word"
                android:textSize="20sp"
                android:text="Detalle"
                />

            <EditText
                android:id="@+id/description"
                android:layout_height="40dp"
                android:paddingLeft="8dp"
                android:layout_width="match_parent"
                android:layout_marginRight="40dp"
                android:layout_gravity="bottom"
                android:text=""
                android:textColor="@color/word"
                android:textSize="18sp"

               />

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="2dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="35dp"
                    android:textColor="@color/word"
                    android:textSize="20sp"
                    android:text="$"
                    android:layout_gravity="center_vertical|left"
                    android:gravity="center_vertical|left"
                    />


                <EditText
                    android:id="@+id/value"
                    android:layout_width="100dp"
                    android:textColor="@color/word"
                    android:text=""
                    android:layout_gravity="bottom"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"

                    />



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:id="@+id/select_payment_method"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_height="wrap_content">


                <androidx.appcompat.widget.AppCompatCheckBox
                    android:layout_width="wrap_content"
                    android:id="@+id/check_ef"
                    android:scaleX="1.2"
                    android:scaleY="1.2"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:buttonTint="@color/word_clear"


                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/word"
                    android:text="Efectivo"
                    android:gravity="center"
                    android:layout_marginLeft="2dp"
                    android:layout_gravity="center"
                    android:textSize="16sp"

                    />

                <androidx.appcompat.widget.AppCompatCheckBox
                    android:layout_width="wrap_content"
                    android:id="@+id/check_deb"
                    android:layout_height="wrap_content"
                    android:scaleX="1.2"
                    android:scaleY="1.2"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:buttonTint="@color/word_clear"

                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/word"
                    android:text="Débito"
                    android:gravity="center"
                    android:layout_marginLeft="2dp"
                    android:layout_gravity="center"
                    android:textSize="16sp"

                    />

                <androidx.appcompat.widget.AppCompatCheckBox
                    android:layout_width="wrap_content"
                    android:id="@+id/check_card"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:scaleX="1.2"
                    android:scaleY="1.2"
                    android:layout_marginLeft="10dp"
                    android:buttonTint="@color/word_clear"

                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/word"
                    android:text="Tarjeta"
                    android:gravity="center"
                    android:layout_marginLeft="2dp"
                    android:layout_gravity="center"

                    android:textSize="16sp"

                    />




            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:id="@+id/product"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_height="wrap_content">


                <androidx.appcompat.widget.AppCompatCheckBox
                    android:layout_width="wrap_content"
                    android:id="@+id/out_product"
                    android:scaleX="1.2"
                    android:scaleY="1.2"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:buttonTint="@color/word_clear"

                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/word"
                    android:text="Retira producto"
                    android:gravity="center"
                    android:layout_marginLeft="2dp"
                    android:layout_gravity="center"
                    android:textSize="16sp"

                    />

                <androidx.appcompat.widget.AppCompatCheckBox
                    android:layout_width="wrap_content"
                    android:id="@+id/not_out"
                    android:layout_height="wrap_content"
                    android:scaleX="1.2"
                    android:scaleY="1.2"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:buttonTint="@color/word_clear"

                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/word"
                    android:text="No retira producto"
                    android:gravity="center"
                    android:layout_marginLeft="2dp"
                    android:layout_gravity="center"
                    android:textSize="16sp"

                    />



            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:id="@+id/cancel"
                android:layout_weight="1"
                android:text="CANCELAR"
                android:gravity="center"
                android:textColor="@color/colorDialogButton"
                android:textStyle="bold"
                />

            <Button
                android:layout_width="match_parent"
                android:id="@+id/ok"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:textColor="#ffff"

                android:padding="4dp"
                android:background="@color/colorDialogButton"
                android:text="guardar"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>



