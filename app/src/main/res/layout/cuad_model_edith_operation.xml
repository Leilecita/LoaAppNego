<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view_mistake"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rec_dialog"
    android:backgroundTint="@color/background"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dialog_margin_bottom"
        android:layout_marginTop="@dimen/dialog_margin_top"
        android:layout_marginLeft="@dimen/dialog_margin_left"
        android:layout_marginRight="@dimen/dialog_margin_right"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:text="Editar"
            android:textSize="18sp"
            android:textColor="@color/word"
            android:gravity="center"
            android:textStyle="bold"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:padding="0dp"
                    android:textSize="@dimen/general_text"
                    android:fontFamily="@font/opensansregular"
                    android:textColor="@color/word"
                    android:text="Fecha"/>


                <TextView
                    android:id="@+id/edit_date"
                    android:layout_height="33dp"
                    android:paddingLeft="8dp"
                    android:layout_weight="2"
                    style="@style/Widget.Design.TextInputLayout"
                    android:layout_width="match_parent"
                    android:fontFamily="@font/opensanslight"
                    android:textColor="@color/colorDialogButton"
                    android:textSize="16sp"
                    android:gravity="center_vertical"
                    android:background="@drawable/rec_text_edit"
                    android:inputType="textCapWords" />

                <ImageView
                    android:layout_width="match_parent"
                    android:id="@+id/date_picker"
                    android:layout_weight="4"
                    android:layout_height="33dp"
                    android:padding="2dp"
                    android:src="@drawable/date"/>

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:orientation="vertical">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="Valor "
                    android:padding="0dp"
                    android:fontFamily="@font/opensansregular"
                    android:textSize="@dimen/general_text"
                    android:textColor="@color/word"

                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/value"
                    android:textSize="@dimen/general_text"
                    android:padding="4dp"
                    android:layout_marginRight="8dp"
                    android:textColor="@color/colorDialogButton" />


                <EditText

                    android:id="@+id/edit_valueNegative"
                    android:layout_width="60dp"
                    android:layout_marginRight="28dp"
                    style="@style/Widget.Design.TextInputLayout"
                    android:paddingLeft="8dp"
                    android:hint="-"
                    android:fontFamily="@font/opensanslight"
                    android:textColor="#5c5c5c"
                    android:layout_height="35dp"
                    android:textSize="16sp"
                    android:background="@drawable/rec_text_edit"
                    />

                <EditText
                    android:id="@+id/edit_valuePositive"
                    android:layout_width="60dp"
                    android:layout_marginRight="28dp"
                    style="@style/Widget.Design.TextInputLayout"
                    android:paddingLeft="8dp"
                    android:fontFamily="@font/opensanslight"
                    android:textColor="#5c5c5c"
                    android:hint="+"
                    android:layout_height="35dp"
                    android:textSize="16sp"
                    android:background="@drawable/rec_text_edit"
                    />

            </LinearLayout>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:orientation="horizontal">


            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="Marca "
                android:textSize="@dimen/general_text"
                android:fontFamily="@font/opensansregular"

                android:textColor="@color/colorPrimaryDarkLetter"
                />
            <TextView
                android:id="@+id/brand"
                android:layout_height="33dp"
                android:paddingLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                style="@style/Widget.Design.TextInputLayout"
                android:layout_width="match_parent"
                android:fontFamily="@font/opensanslight"
                android:textColor="@color/colorDialogButton"
                android:textSize="@dimen/general_text"
                android:inputType="textCapWords" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="Tipo "
                android:textSize="@dimen/general_text"
                android:fontFamily="@font/opensansregular"
                android:textColor="@color/word" />

            <TextView
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:id="@+id/product_kind"
                android:layout_height="33dp"
                android:fontFamily="@font/opensanslight"
                android:paddingLeft="8dp"
                android:textSize="16sp"
                style="@style/Widget.Design.TextInputLayout"
                android:textColor="@color/colorDialogButton"
                android:inputType="textCapWords"

                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="Descr"
                android:fontFamily="@font/opensansregular"
                android:textSize="@dimen/general_text"
                android:textColor="@color/word" />

            <TextView
                android:layout_width="match_parent"
                android:id="@+id/description"
                android:layout_weight="1"
                android:layout_height="33dp"
                android:fontFamily="@font/opensanslight"
                android:paddingLeft="8dp"
                android:textSize="@dimen/general_text"
                style="@style/Widget.Design.TextInputLayout"
                android:textColor="@color/colorDialogButton"
                android:inputType="textCapWords"

                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="Obs"
                android:fontFamily="@font/opensansregular"
                android:textSize="@dimen/general_text"
                android:textColor="@color/word" />

            <EditText
                android:layout_width="match_parent"
                android:id="@+id/observation"
                android:layout_weight="1"
                android:background="@drawable/rec_text_edit"
                android:layout_height="33dp"
                android:fontFamily="@font/opensanslight"
                android:paddingLeft="8dp"
                android:textSize="@dimen/general_text"
                style="@style/Widget.Design.TextInputLayout"
                android:textColor="@color/colorDialogButton"
                android:inputType="textCapWords"

                />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_marginTop="4dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:fontFamily="@font/opensanslight"
            android:text="Obs: Para modificar datos del producto, hacer desde la planilla de ventas."
            android:textSize="@dimen/general_text"
            android:textColor="@color/colorDialogButton"

            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:id="@+id/cancel"
                android:layout_weight="1"
                android:text="CANCELAR"
                android:gravity="center"
                android:textColor="@color/colorDialogButton"
                android:textStyle="bold"
                />

            <Button
                android:layout_width="match_parent"
                android:id="@+id/ok"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:textColor="#ffff"
                android:padding="4dp"
                android:background="@drawable/rec_find"
                android:backgroundTint="@color/colorDialogButton"
                android:text="guardar"/>

        </LinearLayout>

    </LinearLayout>
    </LinearLayout>


