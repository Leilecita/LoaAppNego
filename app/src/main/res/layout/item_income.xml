<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:paddingTop="4dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="12dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="40dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/bblanco"
            android:layout_height="40dp">
            <TextView
                android:layout_width="match_parent"
                android:gravity="center_horizontal"
                android:textSize="11sp"
                android:text="Mar"
                android:textAllCaps="true"
                android:textColor="@color/colorPrimaryDarkLetter"
                android:layout_height="match_parent"
                android:id="@+id/day_name"
                />

            <TextView
                android:layout_width="match_parent"
                android:gravity="center_horizontal"
                android:textSize="15sp"
                android:layout_weight="1"
                android:id="@+id/day_number"
                android:paddingTop="12dp"
                android:textStyle="bold"
                android:text="12"
                android:textColor="@color/colorPrimaryDarkLetter"
                android:layout_height="match_parent"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            android:id="@+id/rel"
            android:gravity="center_vertical"
            android:layout_height="@dimen/item_height">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_weight="1.1"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="6dp"
                        android:id="@+id/name"
                        android:textColor="@color/colorPrimaryDarkLetter"
                        android:textSize="@dimen/general_text"
                        android:layout_height="wrap_content"
                        android:text="Claura Auteri asdasda"
                        />



                    <TextView
                        android:layout_width="2dp"
                        android:layout_height="match_parent"
                        android:layout_centerHorizontal="true"
                        android:layerType="software"
                        android:background="@drawable/line_vertical"/>




                    <TextView
                        android:layout_width="match_parent"
                        android:layout_weight="4"
                        android:id="@+id/value"
                        android:gravity="right"
                        android:textColor="@color/price"
                        android:textSize="@dimen/general_text"
                        android:paddingRight="5dp"
                        android:layout_height="wrap_content"
                        android:text="1900."
                        />

                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/line2"
                android:paddingTop="@dimen/padding_top"
                android:orientation="horizontal"
                >



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:paddingLeft="6dp"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:orientation="horizontal"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="match_parent"
                                android:maxLines="1"
                                android:ellipsize="end"

                                android:gravity="center_vertical"
                                android:layout_weight="1"
                                android:id="@+id/description"
                                android:textColor="@color/colorPrimaryClearLetter"
                                android:textSize="@dimen/small_text"
                                android:layout_height="wrap_content"
                                android:text="model buzo manda larga"
                                />
                        </LinearLayout>
                    </HorizontalScrollView>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_weight="1.4"
                        android:textColor="@color/price"
                        android:gravity="end"
                        android:id="@+id/value_product"
                        android:textSize="@dimen/general_text"
                        android:paddingRight="5dp"
                        android:layout_height="wrap_content"
                        android:text="1900."
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_weight="1.8"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        />

                    <TextView
                        android:layout_width="2dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="6dp"
                        android:layout_centerHorizontal="true"
                        android:layerType="software"
                        android:background="@drawable/line_vertical"/>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_weight="1.5"
                        android:layout_gravity="center_vertical"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:id="@+id/state"
                            android:layout_gravity="center_vertical"

                            android:src="@mipmap/pendient"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="6"
        android:layout_gravity="center"
        android:gravity="center"
        android:visibility="gone"
        android:id="@+id/cuad_change_state"
        android:layout_marginBottom="2dp"
        android:layout_height="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="4dp"
            android:background="@drawable/rec_find"
            android:gravity="center"
            android:id="@+id/change_to_pendient"
            android:backgroundTint="@color/colorPrimaryClearTr"
            android:layout_marginRight="4dp"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"

                android:src="@mipmap/pendient"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:id="@+id/change_to_done"
            android:layout_marginLeft="4dp"
            android:background="@drawable/rec_find"
            android:backgroundTint="@color/colorPrimaryClearTr"
            android:layout_marginRight="4dp"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:src="@mipmap/done"
                />
        </LinearLayout>





    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:id="@+id/div"
        android:background = "@drawable/line"/>




</LinearLayout>
