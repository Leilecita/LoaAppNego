<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:layout_marginTop="4dp"
    android:layout_marginLeft="4dp"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:layout_width="55sp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/date"
                android:textColor="@color/colorPrimaryDarkLetter"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:text="10-11"
                android:textSize="16sp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/year"
                    android:textColor="@color/colorPrimaryDarkLetter"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:text="2019"
                android:visibility="gone"
                android:textSize="16sp"
                />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:id="@+id/stock_ant"
                android:layout_weight="1"
                android:gravity="center_horizontal"

                android:textColor="@color/colorPrimaryDarkLetter"
                android:textSize="17sp"
                android:layout_height="wrap_content"
                android:text="10/9"
                />

            <TextView
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layerType="software"
                android:background="@drawable/line_vertical"/>

            <TextView
                android:layout_width="match_parent"
                android:id="@+id/stock_in"

                android:textColor="@color/loa_green"
                android:textSize="17sp"
                android:gravity="center_horizontal"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="10019"
                />
            <TextView
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layerType="software"
                android:background="@drawable/line_vertical"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:textColor="@color/loa_red"
                android:gravity="center_horizontal"
                android:textSize="17sp"
                android:id="@+id/stock_out"
                android:layout_height="wrap_content"
                android:text="11900"
                />
            <TextView
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layerType="software"
                android:background="@drawable/line_vertical"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:id="@+id/ideal_stock"
                android:textColor="@color/colorPrimaryDarkLetter"
                android:textSize="17sp"
                android:textStyle="italic"
                android:gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:text="1111"
                />
            <TextView
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layerType="software"
                android:background="@drawable/line_vertical"/>
            <TextView
                android:layout_width="match_parent"
                android:id="@+id/balance_stock"
                android:textColor="@color/colorPrimaryDarkLetter"
                android:gravity="center_horizontal"
                android:layout_weight="1"
                android:textSize="17sp"
                android:layout_height="wrap_content"
                android:text="11233"
                />
            <TextView
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layerType="software"
                android:background="@drawable/line_vertical"/>
            <TextView
                android:layout_width="match_parent"
                android:id="@+id/dif"
                android:textColor="@color/colorPrimaryDarkLetter"
                android:gravity="center_horizontal"
                android:layout_weight="1"
                android:textSize="17sp"
                android:layout_height="wrap_content"
                android:text="11233"
                />


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:padding="4dp"
        android:visibility="gone"
        android:layout_marginTop="6dp"
        android:id="@+id/line_options"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:id="@+id/detail"
            android:textColor="@color/colorPrimaryDarkLetter"
            android:gravity="right"
            android:layout_weight="1"
            android:textSize="16sp"
            android:layout_height="wrap_content"
            android:text="asdasd"
            android:layout_marginRight="6dp"
            />


    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="0dp"
        android:id="@+id/div"
        android:background="@drawable/line"
        />

</LinearLayout>
