<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/listday"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@color/background"
    >

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toolbar"
        android:background="@color/colorPrimary">

        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/line_home"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:id="@+id/home"
                android:src="@drawable/returnn"
                android:layout_marginRight="4dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:id="@+id/title"
                android:text="Nuevo empleado"
                style="@style/TitleStyle"
                android:textColor="@color/white"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_gravity="center_vertical|right"
            android:gravity="right"
            android:id="@+id/options"

            android:paddingRight="8dp"
            android:layout_height="wrap_content"
            >

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="8dp"
                android:layout_gravity="right"
                android:src="@drawable/save"
                />
        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/line1"
        android:padding="12dp"
        android:layout_below="@id/toolbar"
        android:layout_marginBottom="6dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:layout_marginTop="4dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="120dp"
                style="@style/CodeFontCreate"
                android:textColor="@color/colorPrimaryDarkLetter"
                android:text="Nombre "
                />
            <EditText
                style="@style/CodeFontInput"
                android:id="@+id/user_name"
                />



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:layout_marginTop="4dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="120dp"
                style="@style/CodeFontCreate"
                android:textColor="@color/colorPrimaryDarkLetter"
                android:text="Apellido "
                />
            <EditText
                style="@style/CodeFontInput"
                android:id="@+id/user_surname"
                />



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:padding="4dp"
            android:layout_marginTop="4dp"
            android:layout_height="wrap_content">


            <TextView
                style="@style/CodeFontCreate"
                android:layout_width="120dp"
                android:textColor="@color/colorPrimaryDarkLetter"
                android:text="Teléfono   "
                />
            <EditText
                style="@style/CodeFontInput"
                android:id="@+id/user_phone"
                />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:padding="4dp"
            android:layout_marginTop="4dp"
            android:layout_height="wrap_content">

            <TextView
                style="@style/CodeFontCreate"
                android:text="Dirección "
                android:layout_width="120dp"
                android:textColor="@color/colorPrimaryDarkLetter"
                />

            <EditText
                style="@style/CodeFontInput"
                android:id="@+id/user_address"
                />
        </LinearLayout>

    </LinearLayout>

    <androidx.cardview.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/select_photo"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_margin="4dp"
        android:layout_marginRight="1dp"
        android:layout_marginLeft="1dp"
        android:layout_below="@+id/line1"
        card_view:cardBackgroundColor="@color/colorDialogButton"
        card_view:cardCornerRadius="4dp"
        card_view:cardElevation="1dp"
        card_view:cardMaxElevation="1dp"
        card_view:contentPaddingBottom="2dp"
        card_view:contentPaddingLeft="4dp"
        card_view:contentPaddingRight="4dp"
        card_view:contentPaddingTop="2dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:text=" "
                android:textColor="#FFFF"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:src="@drawable/camera"

                />

        </LinearLayout>

    </androidx.cardview.widget.CardView>
    <ImageView
        android:id="@+id/imageview"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/person_color"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        />



</RelativeLayout>

