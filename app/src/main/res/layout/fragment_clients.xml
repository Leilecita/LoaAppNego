<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:id="@+id/listado">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toolbar"
        android:background="@color/colorPrimary">

        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/line_home"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/home"
                android:layout_gravity="center"
                android:src="@drawable/returnn"
                android:layout_marginRight="4dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:id="@+id/title"
                android:text="  Ficha deudores"
                style="@style/TitleStyle"
                />

        </LinearLayout>



    </androidx.appcompat.widget.Toolbar>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="6dp"
        android:layout_below="@id/toolbar"
        android:layout_marginRight="10dp"
        android:id="@+id/line1"
        >
        <androidx.appcompat.widget.SearchView
            android:id="@+id/searchView"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:background="@drawable/rec_find"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"

            android:clickable="true"/>


        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_weight="2"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="2"
                android:gravity="right"
                android:paddingLeft="6dp"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content">

                <Button
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/button_rec"
                    android:id="@+id/orderClientBy"
                    android:text="A-B"
                    android:fontFamily="@font/opensansregular"
                    android:textSize="17sp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_gravity="center_vertical"

                    />

                <Button
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/button_rec"
                    android:id="@+id/orderClientByDebt"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:text="> $"
                    android:fontFamily="@font/opensansregular"
                    android:textSize="17sp"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_gravity="center_vertical"

                    />


                <Button
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:background="@drawable/button_rec"
                    android:id="@+id/orderClientByCreated"
                    android:text="FE"
                    android:fontFamily="@font/opensansregular"
                    android:textSize="17sp"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_gravity="center_vertical"

                    />

            </LinearLayout>
        </HorizontalScrollView>






    </LinearLayout>



    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/list_users"
        android:layout_below="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:background="@color/background"
        android:layout_height="65dp"
        android:orientation="vertical">

        <TextView
            style="@style/DivisorCategoryStyle"
            android:background="@color/colorPrimaryClear"
            android:layout_height="1dp"
            android:layout_marginRight="0dp"
            android:layout_marginLeft="0dp"

            />

        <androidx.cardview.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view"
            android:layout_width="140dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            card_view:cardCornerRadius="2dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="15dp"
            card_view:cardMaxElevation="4dp"
            card_view:cardElevation="2dp"
            card_view:contentPadding="2dp"
            >

            <TextView
                android:layout_width="150dp"
                android:id="@+id/totalAmount"
                android:layout_height="match_parent"
                android:textColor="@color/colorPrimaryDarkLetter"
                android:background="@drawable/rec_find"
                android:textSize="20sp"
                android:gravity="center"
                android:text=""
                />
        </androidx.cardview.widget.CardView>



    </LinearLayout>

    <LinearLayout
        android:layout_width="75dp"
        android:background="@drawable/deudores1"
        android:id="@+id/fab_agregarTod"
        android:layout_margin="15dp"
        android:orientation="vertical"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_height="75dp"/>





</RelativeLayout>

