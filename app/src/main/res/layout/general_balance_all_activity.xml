<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:background="@color/background"
android:descendantFocusability="blocksDescendants"
android:layout_height="match_parent"
android:id="@+id/listado">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">




    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toolbar"
        android:background="@color/colorPrimary">

        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/line_home"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:id="@+id/home"
                android:src="@drawable/returnn"
                android:layout_marginRight="4dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="Stock balance general"
                android:id="@+id/title"
                style="@style/TitleStyle"
                />

        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/listday"
        android:layout_width="match_parent"
        android:backgroundTint="@color/background"
        android:layout_height="match_parent"
        android:background="#ededed"
        >



        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/balance"
            android:background="@color/background_violet"
            android:paddingLeft="12dp"
            android:gravity="center_vertical"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:paddingRight="8dp"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="50dp"
                android:textSize="16sp"
                android:layout_height="wrap_content"
                android:text="Fecha"
                android:layout_gravity="center_vertical"
                android:textColor="@color/colorPrimaryDarkLetter"
                android:fontFamily="@font/opensansregular"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_weight="1.2"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryDarkLetter"
                android:textSize="16sp"
                android:layout_gravity="center"
                android:gravity="center"
                android:textStyle="bold"
                />


            <TextView
                android:layout_width="match_parent"
                android:layout_weight="1.8"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:textSize="16sp"
                android:layout_height="wrap_content"
                android:text="Stk real"
                android:textColor="@color/colorPrimaryDarkLetter"
                android:fontFamily="@font/opensansregular"
                />


            <TextView
                android:layout_width="match_parent"
                android:layout_weight="1.8"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:textSize="16sp"
                android:layout_height="wrap_content"
                android:text="Stk ideal"
                android:textColor="@color/colorPrimaryDarkLetter"
                android:fontFamily="@font/opensansregular"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_weight="1.8"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="16sp"
                android:fontFamily="@font/opensansregular"
                android:textColor="@color/colorPrimaryDarkLetter"
                android:text="Dif"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_weight="1.8"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="16sp"
                android:textColor="@color/colorPrimaryDarkLetter"
                android:text="Res"
                android:fontFamily="@font/opensansregular"
                />
        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/list_general_stock_events"
            android:layout_below="@+id/balance"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="80dp"
            />


    </RelativeLayout>

    </LinearLayout>
<!-- Bottom Sheet -->
<include layout="@layout/bottom_shet_balance" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>