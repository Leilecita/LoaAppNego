<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/background"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:id="@+id/view">


    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="vertical"

        android:layout_height="match_parent"
        >

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/toolbar"
            android:background="@color/colorPrimary">

            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/line_home"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:id="@+id/home"
                    android:src="@drawable/returnn"
                    android:layout_marginRight="4dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:id="@+id/title"
                    android:text=" Estadísticas"
                    style="@style/TitleStyle"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_gravity="center_vertical|right"
                android:gravity="right"
                android:paddingRight="8dp"
                android:layout_height="wrap_content"
                >

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:padding="8dp"
                    android:id="@+id/view_eye"
                    android:layout_gravity="right"
                    android:src="@drawable/open_eye"
                    />
            </LinearLayout>

        </androidx.appcompat.widget.Toolbar>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/background"
            android:id="@+id/lineFilter"
            android:orientation="vertical">

            <HorizontalScrollView
                android:id="@+id/hsv"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:fillViewport="true"
                android:measureAllChildren="false"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="6dp"
                    android:orientation="horizontal"
                    android:padding="4dp"
                    >



                    <ImageView
                        android:layout_width="48dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:id="@+id/all"
                        android:layout_height="48dp"
                        android:src="@drawable/ball"/>

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:id="@+id/man"
                        android:layout_height="48dp"
                        android:src="@drawable/bmancl"/>

                    <ImageView
                        android:layout_width="48dp"
                        android:id="@+id/woman"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_height="48dp"
                        android:src="@drawable/bwomcl"/>

                    <ImageView
                        android:layout_width="48dp"
                        android:id="@+id/zapas"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_height="48dp"
                        android:src="@drawable/bcalcl"/>

                    <ImageView
                        android:layout_width="48dp"
                        android:id="@+id/boy"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_height="48dp"
                        android:src="@drawable/bnincl"/>


                    <ImageView
                        android:layout_width="45dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:id="@+id/tecnico"
                        android:layout_height="45dp"
                        android:src="@drawable/btecl"/>

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:id="@+id/acces"
                        android:src="@drawable/bacccl"/>



                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:id="@+id/luz"
                        android:src="@drawable/bluzcl"/>

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_height="48dp"
                        android:id="@+id/oferta"
                        android:src="@drawable/bofercl"/>

                </LinearLayout>



            </HorizontalScrollView>



        </LinearLayout>
        <RelativeLayout
            android:id="@+id/listday"
            android:layout_width="wrap_content"
            android:background="@color/background"
            android:layout_height="wrap_content"
            >

           <!-- <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/list_products"
                android:layout_width="match_parent"
                android:clipToPadding="false"
                android:paddingTop="110dp"
                android:visibility="gone"
                android:paddingBottom="200dp"
                android:layout_height="match_parent"
                />

                -->

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:layout_marginTop="110dp"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="80dp"
                    android:orientation="vertical"
                    android:layout_margin="18dp"
                    android:gravity="center"
                    android:backgroundTint="@color/local"
                    android:background="@drawable/bblanco"
                    android:layout_height="80dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:id="@+id/entries"
                        android:fontFamily="@font/opensansregular"
                        android:layout_gravity="center"
                        android:textColor="@color/white"
                        android:text=""
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:fontFamily="@font/opensansregular"
                        android:layout_height="wrap_content"
                        android:textSize="17sp"
                        android:layout_gravity="center"
                        android:textColor="@color/white"
                        android:text="ingr"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="50dp"
                    android:orientation="vertical"
                    android:layout_margin="18dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:backgroundTint="@color/violetClear"
                    android:layout_height="50dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:id="@+id/dif"
                        android:fontFamily="@font/opensansregular"
                        android:layout_gravity="center"
                        android:textColor="@color/colorPrimaryClearLetter"
                        android:text=""
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="17sp"
                        android:layout_gravity="center"
                        android:textColor="@color/colorPrimaryClearLetter"
                        android:text="dif"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="100dp"
                    android:orientation="vertical"
                    android:layout_margin="18dp"
                    android:gravity="center"
                    android:backgroundTint="@color/local"
                    android:background="@drawable/bblanco"
                    android:layout_height="100dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:id="@+id/sales"
                        android:fontFamily="@font/opensansregular"
                        android:layout_gravity="center"
                        android:textColor="@color/white"
                        android:text=""
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="17sp"
                        android:layout_gravity="center"
                        android:textColor="@color/white"
                        android:fontFamily="@font/opensansregular"
                        android:text="ventas"
                        />

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/empty"
                android:layout_centerHorizontal="true"
                android:textSize="18sp"
                android:layout_marginTop="140dp"
                android:visibility="gone"
                android:layout_gravity="center_horizontal"
                android:text="No hay productos para esta selección"


                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/lineBrandType"
                android:orientation="vertical">

                <HorizontalScrollView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:fillViewport="true"
                    android:measureAllChildren="false"
                    android:scrollbars="none">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingLeft="4dp"
                        android:paddingRight="4dp"
                        >

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:minWidth="120dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:layout_marginRight="5dp"
                            android:layout_marginLeft="5dp"
                            android:id="@+id/select_art"
                            android:paddingRight="8dp"
                            android:background="@drawable/rec_unselected"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/art_name"
                                android:textColorHint="@color/white"
                                android:textColor="@color/white"
                                android:layout_marginLeft="8dp"
                                android:fontFamily="@font/opensansregular"
                                android:hint="Articulo"
                                android:textSize="16sp"
                                android:layout_gravity="center"
                                />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:minWidth="120dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:layout_marginRight="5dp"
                            android:paddingRight="8dp"
                            android:id="@+id/select_brand"
                            android:background="@drawable/rec_unselected"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/brand_name"
                                android:textColor="@color/white"
                                android:hint="Marca"
                                android:fontFamily="@font/opensansregular"
                                android:textColorHint="@color/white"
                                android:layout_marginLeft="8dp"
                                android:textSize="16sp"
                                android:layout_gravity="center"
                                />
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:minWidth="120dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:layout_marginRight="5dp"
                            android:paddingRight="8dp"
                            android:id="@+id/select_model"
                            android:background="@drawable/rec_unselected"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/model_name"
                                android:textColor="@color/white"
                                android:fontFamily="@font/opensansregular"
                                android:textColorHint="@color/white"
                                android:hint="Modelo"
                                android:layout_marginLeft="8dp"
                                android:textSize="16sp"
                                android:layout_gravity="center"
                                />
                        </LinearLayout>

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:paddingLeft="4dp"
                            android:paddingRight="4dp"
                            android:visibility="gone"
                            android:id="@+id/balance"
                            android:layout_gravity="center"
                            android:src="@drawable/balance"

                            />

                    </LinearLayout>

                </HorizontalScrollView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:paddingTop="12dp"
                    android:orientation="horizontal">



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/rec_text_edit"
                        android:gravity="center_vertical"
                        android:paddingLeft="4dp"
                        android:layout_marginRight="4dp"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/date_since"
                            android:layout_height="37dp"
                            android:gravity="center_vertical"
                            android:paddingLeft="8dp"
                            android:fontFamily="@font/opensanslight"
                            style="@style/Widget.Design.TextInputLayout"
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:textColor="@color/colorPrimaryDarkLetter"
                            android:hint="desde"
                            android:textColorHint="@color/clearhintletter"
                            android:textSize="@dimen/general_text"
                            android:background="@drawable/rec_text_edit"
                            android:inputType="textCapWords" />


                        <ImageView
                            android:layout_width="wrap_content"
                            android:src="@drawable/delete_viol"
                            android:id="@+id/clean_dateSince"
                            android:layout_gravity="center"
                            android:alpha="0.4"
                            android:paddingRight="8dp"
                            android:paddingLeft="8dp"
                            android:layout_height="wrap_content"
                            ></ImageView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/rec_text_edit"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="4dp"
                        android:paddingLeft="4dp"
                        android:layout_height="wrap_content">


                        <TextView
                            android:id="@+id/date_to"
                            android:layout_height="37dp"
                            android:gravity="center_vertical"
                            android:paddingLeft="8dp"
                            android:hint="hasta"
                            android:textColorHint="@color/clearhintletter"
                            style="@style/Widget.Design.TextInputLayout"
                            android:fontFamily="@font/opensanslight"
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:textColor="@color/colorPrimaryDarkLetter"
                            android:textSize="@dimen/general_text"
                            android:background="@drawable/rec_text_edit"
                            android:inputType="textCapWords" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:src="@drawable/delete_viol"
                            android:id="@+id/clean_dateTo"
                            android:alpha="0.4"
                            android:layout_gravity="center"
                            android:paddingRight="8dp"
                            android:paddingLeft="8dp"
                            android:layout_height="wrap_content"
                            ></ImageView>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"

                    android:layout_marginBottom="12dp"
                    android:layout_height="wrap_content">

                    <AutoCompleteTextView
                        android:layout_width="match_parent"
                        android:background="@drawable/rec_find"
                        android:layout_height="35dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginRight="8dp"
                        android:visibility="gone"

                        android:paddingLeft="8dp"
                        android:id="@+id/auto_type"

                        />

                    <AutoCompleteTextView
                        android:layout_width="match_parent"
                        android:paddingLeft="8dp"
                        android:visibility="gone"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginTop="12dp"
                        android:background="@drawable/rec_find"
                        android:layout_height="35dp"
                        android:id="@+id/auto_model"

                        />

                    <AutoCompleteTextView
                        android:layout_width="match_parent"
                        android:background="@drawable/rec_find"
                        android:layout_height="35dp"
                        android:layout_marginTop="12dp"
                        android:paddingLeft="8dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:visibility="gone"
                        android:id="@+id/auto_brand"

                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:background="@color/background"
                    android:id="@+id/line_recycler"
                    android:layout_below="@+id/lineBrandType"
                    android:layout_marginBottom="200dp"
                    android:layout_height="match_parent">



                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_centerHorizontal="true"
                        android:id="@+id/recycler_view_grid_model"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:paddingLeft="4dp"

                        android:focusable="true"
                        android:scrollbars="vertical"/>

                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_centerHorizontal="true"
                        android:id="@+id/recycler_view_grid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="4dp"
                        android:paddingRight="4dp"
                        android:focusable="true"
                        android:scrollbars="vertical"/>

                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_centerHorizontal="true"
                        android:id="@+id/recycler_view_grid_type"
                        android:layout_width="wrap_content"
                        android:focusable="true"
                        android:layout_height="wrap_content"
                        android:paddingLeft="4dp"
                        android:paddingRight="4dp"
                        android:scrollbars="vertical"/>
                </LinearLayout>
            </LinearLayout>


            <ProgressBar
                android:id="@+id/simpleProgressBar"
                style="?android:attr/progressBarStyle"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:progress="50"
                android:layout_marginTop="140dp"
                android:visibility="gone"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:orientation="vertical">

            </LinearLayout>
        </RelativeLayout>


    </LinearLayout>


    <!-- Bottom Sheet -->
    <include layout="@layout/bottom_shet_statistics" />



</androidx.coordinatorlayout.widget.CoordinatorLayout>