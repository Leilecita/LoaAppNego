<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view_mistake"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    card_view:cardCornerRadius="5dp"
    card_view:cardElevation="2dp"
    card_view:cardMaxElevation="4dp"
    android:backgroundTint="#fff"
    card_view:contentPadding="16dp"
    >

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="Fiado"
            android:textSize="20sp"
            android:textColor="@color/title_dialog_info"
            android:gravity="center"
            android:textStyle="bold"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/name_user"
                android:textStyle="italic"
                android:textSize="18sp"
                android:textColor="@color/word"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="2dp"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="2dp"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/date_picker"
                    android:text=" Fecha     "
                    android:textColor="@color/word"
                    android:textSize="19sp"
                    android:layout_height="40dp"
                    android:src="@drawable/date"
                    />
                <TextView
                    android:id="@+id/date"
                    android:layout_height="40dp"
                    android:paddingLeft="8dp"
                    android:layout_width="match_parent"
                    android:textColor="@color/word"
                    android:textSize="18sp"
                    android:gravity="center_vertical"
                    android:inputType="textCapWords" />


            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/code"
                android:layout_weight="1"
                android:layout_height="40dp"
                android:layout_marginRight="8dp"
                android:layout_width="match_parent"
                android:layout_gravity="bottom"
                android:gravity="bottom"
                android:hint="Codigo"
                android:textColor="@color/word"
                android:textSize="18sp"
                android:inputType="textCapCharacters" />
            <EditText
                android:id="@+id/brand"
                android:layout_height="40dp"
                android:paddingLeft="8dp"
                android:layout_weight="1"
                style="@style/Widget.Design.TextInputLayout"
                android:layout_width="match_parent"
                android:hint="Marca"
                android:textColor="#5c5c5c"
                android:textSize="18sp"
                android:inputType="textCapWords" />
            <EditText
                android:id="@+id/size"
                android:layout_height="40dp"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:hint="Talle"
                android:textColor="#5c5c5c"
                android:textSize="18sp"
                android:inputType="textCapCharacters" />
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/product_kind"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:layout_marginRight="8dp"
                style="@style/Widget.Design.TextInputLayout"
                android:layout_width="match_parent"
                android:hint="Producto"
                android:textColor="#5c5c5c"
                android:textSize="18sp"
                android:inputType="textCapWords" />

            <EditText
                android:id="@+id/description"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:layout_marginRight="8dp"
                style="@style/Widget.Design.TextInputLayout"
                android:layout_width="match_parent"
                android:hint="Detalle"
                android:textColor="@color/word"
                android:textSize="18sp"
                android:inputType="textCapWords" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="2dp"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:orientation="horizontal">
                <EditText
                    android:id="@+id/value"
                    android:hint="$"
                    android:layout_width="130dp"
                    style="@style/Widget.Design.TextInputLayout"
                    android:textColor="@color/word"
                    android:layout_height="40dp"
                    android:textSize="18sp"
                    />



                <androidx.appcompat.widget.AppCompatCheckBox
                    android:layout_width="wrap_content"
                    android:id="@+id/checkBoxCancelar"
                    android:layout_height="wrap_content"
                    android:scaleX="1.2"
                    android:scaleY="1.2"
                    android:layout_gravity="center"
                    android:layout_marginLeft="22dp"
                    android:buttonTint="@color/word_clear"

                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/word"
                    android:text="Cancelar deuda"
                    android:gravity="center"
                    android:layout_marginLeft="2dp"
                    android:layout_gravity="center"
                    android:textSize="15sp"

                    />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/select_payment_method"
            android:layout_marginTop="10dp"
            android:visibility="gone"
            android:orientation="horizontal"
            android:layout_height="wrap_content">


            <androidx.appcompat.widget.AppCompatCheckBox
                android:layout_width="wrap_content"
                android:id="@+id/check_ef"
                android:scaleX="1.2"
                android:scaleY="1.2"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:buttonTint="@color/word_clear"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/word"
                android:text="Efectivo"
                android:gravity="center"
                android:layout_marginLeft="2dp"
                android:layout_gravity="center"
                android:textSize="15sp"

                />

            <androidx.appcompat.widget.AppCompatCheckBox
                android:layout_width="wrap_content"
                android:id="@+id/check_deb"
                android:layout_height="wrap_content"
                android:scaleX="1.2"
                android:scaleY="1.2"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:buttonTint="@color/word_clear"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/word"
                android:text="DÃ©bito"
                android:gravity="center"
                android:layout_marginLeft="2dp"
                android:layout_gravity="center"
                android:textSize="15sp"

                />

            <androidx.appcompat.widget.AppCompatCheckBox
                android:layout_width="wrap_content"
                android:id="@+id/check_card"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:scaleX="1.2"
                android:scaleY="1.2"
                android:layout_marginLeft="10dp"
                android:buttonTint="@color/word_clear"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/word"
                android:text="Tarjeta"
                android:gravity="center"
                android:layout_marginLeft="2dp"
                android:layout_gravity="center"

                android:textSize="15sp"

                />




        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/product"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_height="wrap_content">


            <androidx.appcompat.widget.AppCompatCheckBox
                android:layout_width="wrap_content"
                android:id="@+id/out_product"
                android:scaleX="1.2"
                android:scaleY="1.2"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:buttonTint="@color/word_clear"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/word"
                android:text="Retira producto"
                android:gravity="center"
                android:layout_marginLeft="2dp"
                android:layout_gravity="center"
                android:textSize="16sp"

                />

            <androidx.appcompat.widget.AppCompatCheckBox
                android:layout_width="wrap_content"
                android:id="@+id/not_out"
                android:layout_height="wrap_content"
                android:scaleX="1.2"
                android:scaleY="1.2"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:buttonTint="@color/word_clear"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/word"
                android:text="No retira producto"
                android:gravity="center"
                android:layout_marginLeft="2dp"
                android:layout_gravity="center"
                android:textSize="16sp"

                />



        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:id="@+id/cancel"
                android:layout_weight="1"
                android:text="CANCELAR"
                android:gravity="center"
                android:textColor="@color/colorDialogButton"
                android:textStyle="bold"
                />

            <Button
                android:layout_width="match_parent"
                android:id="@+id/ok"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:textColor="#ffff"
                android:padding="4dp"
                android:background="@color/colorDialogButton"
                android:text="guardar"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>



