<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"

    android:layout_height="match_parent">


    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="14dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="2dp"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/rec_find"
                android:orientation="horizontal"
                >

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/date_picker"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/date_w"/>

                <TextView
                    android:id="@+id/date"
                    android:layout_height="33dp"
                    android:paddingLeft="8dp"
                    style="@style/Widget.Design.TextInputLayout"
                    android:layout_width="match_parent"
                    android:textColor="@color/word"
                    android:textSize="16sp"
                    android:gravity="center_vertical"
                    android:inputType="textCapWords" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@drawable/rec_find"
                android:layout_marginTop="12dp"
                android:layout_marginRight="8dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/money"/>

                <EditText
                    android:id="@+id/counted_sale"
                    android:layout_height="33dp"

                    android:layout_width="match_parent"
                    android:hint="Venta contado"
                    android:background="@null"
                    android:textColor="@color/word"
                    android:textSize="16sp"

                    android:inputType="textCapWords" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@drawable/rec_find"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_marginLeft="4dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/card"/>


            <EditText
                android:id="@+id/credit_card"
                android:layout_height="33dp"
                android:layout_weight="1"
                android:paddingLeft="8dp"
                style="@style/Widget.Design.TextInputLayout"
                android:layout_width="match_parent"
                android:hint="Tarjeta"
                android:textColor="@color/word"
                android:textSize="16sp"
                android:background="@null"
                android:inputType="textCapWords" />
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal">

            <TextView
                android:layout_height="33dp"
                android:layout_weight="1"
                android:paddingLeft="8dp"
                android:layout_marginRight="8dp"
                style="@style/Widget.Design.TextInputLayout"
                android:layout_width="match_parent"
                android:text="Caja total"
                android:textColor="@color/word"
                android:textSize="18sp"
                />

            <EditText
                android:id="@+id/total_amount"
                android:layout_height="33dp"
                android:layout_weight="1"
                android:paddingLeft="8dp"
                style="@style/Widget.Design.TextInputLayout"
                android:layout_width="match_parent"
                android:hint=""
                android:textColor="#5c5c5c"
                android:textSize="16sp"
                android:background="@drawable/rec_find"
                android:inputType="textCapWords" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal">

            <TextView
                android:layout_height="33dp"
                android:layout_weight="1"
                android:paddingLeft="8dp"
                android:layout_marginRight="8dp"
                style="@style/Widget.Design.TextInputLayout"
                android:layout_width="match_parent"
                android:text="Resto de caja"
                android:textColor="@color/word"
                android:textSize="18sp"
                />

            <EditText
                android:id="@+id/rest_box"
                android:layout_height="33dp"
                android:layout_weight="1"
                android:paddingLeft="8dp"
                style="@style/Widget.Design.TextInputLayout"
                android:layout_width="match_parent"
                android:hint=""
                android:textColor="#5c5c5c"
                android:textSize="16sp"
                android:background="@drawable/rec_find"
                android:inputType="textCapWords" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal">

            <TextView
                android:layout_height="33dp"
                android:layout_weight="1"
                android:paddingLeft="8dp"
                android:layout_marginRight="8dp"
                style="@style/Widget.Design.TextInputLayout"
                android:layout_width="match_parent"
                android:text="Resto caja ant"
                android:textColor="@color/word"
                android:textSize="18sp"
                />


            <TextView
                android:layout_height="33dp"
                android:layout_weight="1"
                android:paddingLeft="8dp"
                android:id="@+id/res_box_day_before"
                android:layout_marginRight="8dp"
                android:layout_width="match_parent"
                android:text=""
                android:textColor="@color/word"
                android:textSize="18sp"
                />




        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal">

            <TextView
                android:layout_height="33dp"
                android:layout_weight="1"
                android:paddingLeft="8dp"
                android:layout_marginRight="8dp"
                style="@style/Widget.Design.TextInputLayout"
                android:layout_width="match_parent"
                android:text="Tot extracciones"
                android:textColor="@color/word"
                android:textSize="18sp"
                />


            <TextView
                android:layout_height="33dp"
                android:layout_weight="1"
                android:paddingLeft="8dp"
                android:id="@+id/tot_extract"
                android:layout_marginRight="8dp"
                android:layout_width="match_parent"
                android:text=""
                android:textColor="@color/word"
                android:textSize="18sp"
                />




        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="2dp"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="horizontal">
                <EditText
                    android:id="@+id/deposit"
                    android:hint="Deposito"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:visibility="gone"
                    style="@style/Widget.Design.TextInputLayout"
                    android:layout_marginRight="8dp"
                    android:paddingLeft="8dp"
                    android:textColor="#5c5c5c"
                    android:layout_height="33dp"
                    android:textSize="16sp"
                    android:background="@drawable/rec_text_edit"
                    />

                <EditText
                    android:id="@+id/detail"
                    android:layout_height="33dp"
                    android:layout_weight="1"
                    android:paddingLeft="8dp"
                    style="@style/Widget.Design.TextInputLayout"
                    android:layout_width="match_parent"
                    android:hint="Detalle"
                    android:textColor="#5c5c5c"
                    android:textSize="16sp"
                    android:background="@drawable/rec_find"
                    android:inputType="textCapWords" />



            </LinearLayout>
        </LinearLayout>



            <ImageView
                android:layout_width="match_parent"
                android:id="@+id/select_photo"
                android:layout_height="35dp"
                android:textColor="#ffff"
                android:padding="4dp"
                android:src="@drawable/camera"
                android:layout_marginTop="15dp"
                android:backgroundTint="@color/colorDialogButton"
                android:background="@drawable/rec_find"

                />

        <ImageView
            android:id="@+id/imageview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:padding="4dp"
            android:src="@drawable/camera"
            android:textColor="#ffff"

            />


    </LinearLayout>


</ScrollView>
</RelativeLayout>