<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view_mistake"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rec_dialog"
    android:backgroundTint="@color/background"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dialog_margin_bottom"
        android:layout_marginTop="@dimen/dialog_margin_top"
        android:layout_marginLeft="@dimen/dialog_margin_left"
        android:layout_marginRight="@dimen/dialog_margin_right"
        android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:text="Informacion transaccion"
            android:textSize="@dimen/general_text"
            android:fontFamily="@font/opensansregular"
            android:textColor="@color/word"
            android:gravity="center"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="120dp"
                android:padding="4dp"
                android:textSize="@dimen/general_text"
                android:textColor="@color/word"
                android:fontFamily="@font/opensansregular"
                android:text="Fecha  "/>

            <TextView
                android:id="@+id/obs_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="4dp"
                android:textColor="@color/colorPrimaryDarkLetter"
                android:textSize="@dimen/general_text"
               />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="4dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="120dp"
                android:fontFamily="@font/opensansregular"
                android:padding="4dp"
                android:textSize="@dimen/general_text"
                android:textColor="@color/word"
                android:text="Producto  "/>

            <TextView
                android:id="@+id/product_kind"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="4dp"
                android:textColor="@color/colorDialogButton"
                android:textSize="@dimen/general_text"
              />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:orientation="horizontal">
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="120dp"
                android:padding="4dp"
                android:fontFamily="@font/opensansregular"
                android:textSize="@dimen/general_text"
                android:textColor="@color/word"
                android:text="Valor "/>

            <TextView
                android:id="@+id/value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="4dp"
                android:textColor="@color/colorDialogButton"
                android:textSize="@dimen/general_text"
               />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:orientation="horizontal">
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="120dp"
                android:padding="4dp"
                android:fontFamily="@font/opensansregular"
                android:textSize="@dimen/general_text"
                android:textColor="@color/word"
                android:text="Medio de pago "/>

            <TextView
                android:id="@+id/payment_method"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="4dp"
                android:textColor="@color/colorDialogButton"
                android:textSize="@dimen/general_text"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:orientation="horizontal">
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="120dp"
                android:padding="4dp"
                android:fontFamily="@font/opensansregular"
                android:textSize="@dimen/general_text"
                android:textColor="@color/word"
                android:text="Descripcion "/>

            <TextView
                android:id="@+id/description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="4dp"
                android:textColor="@color/colorDialogButton"
                android:textSize="@dimen/general_text"
               />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:orientation="horizontal">
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="120dp"
                android:padding="4dp"
                android:fontFamily="@font/opensansregular"
                android:textSize="@dimen/general_text"
                android:textColor="@color/word"
                android:text="Obs"/>

            <TextView
                android:id="@+id/observation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="4dp"
                android:textColor="@color/colorDialogButton"
                android:textSize="@dimen/general_text"
                />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="match_parent"
                android:id="@+id/edith"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:src="@drawable/edituser"
                android:padding="8dp"
                android:textColor="#6e6e6e"
                android:textSize="18dp"
                android:textStyle="italic"/>

            <ImageView
                android:layout_height="40dp"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:padding="8dp"
                android:id="@+id/delete"
                android:src="@drawable/deleteuser"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="#414141"
                />
        </LinearLayout>

    </LinearLayout>
    </LinearLayout>


