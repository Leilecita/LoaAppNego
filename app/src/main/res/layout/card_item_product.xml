<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    android:layout_width="match_parent"
    android:id="@+id/item"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content">


<LinearLayout
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:layout_marginRight="12dp"
    android:layout_marginLeft="12dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:id="@+id/type"
                    android:text="Remer asdaa"
                    android:paddingRight="2dp"
                    android:textColor="@android:color/black"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="left"
                    android:id="@+id/brand"

                    android:text=" Oneill"
                    android:textColor="@android:color/black"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/stock"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_gravity="right|center"
                    android:text="34"
                    android:textColor="@color/word"
                    android:textSize="18sp" />
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="15dp"
                    android:padding="2dp"
                    android:id="@+id/salir"
                    android:visibility="gone"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/close"
                    />



            </LinearLayout>




        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:padding="4dp"
        android:layout_marginTop="6dp"
        android:id="@+id/line_options"
        android:visibility="gone"
        android:layout_height="wrap_content">


        <ImageView
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:id="@+id/delete_product"
            android:src="@drawable/dustbin"
            android:layout_height="25dp" />
        <ImageView
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:id="@+id/see_balance"
            android:src="@drawable/balance"
            android:layout_height="25dp" />



        <ImageView
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:id="@+id/add_stock"
            android:src="@drawable/addp"
            android:padding="5dp"
            android:layout_height="25dp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:id="@+id/less_stock"
            android:src="@drawable/lesspe"
            android:padding="5dp"
            android:layout_height="25dp" />





    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/update_stock"
        android:visibility="gone"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/setQuantity"
            android:paddingTop="6dp"
            android:layout_height="wrap_content">



            <TextView
                style="@style/CodeFontInput"
                android:layout_height="40dp"
                android:hint="Detalle"
                android:gravity="center_vertical"
                android:background="@drawable/rec_find"
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:id="@+id/detail"/>


            <LinearLayout
                android:layout_width="60dp"
                style="@style/CodeFontInput"
                android:background="@drawable/rec_find"
                android:layout_marginLeft="10dp"
                android:layout_height="40dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+"
                    android:textColor="@color/word"
                    android:id="@+id/less_load"
                    android:layout_gravity="center_vertical"
                    />
                <EditText
                    android:layout_gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@null"
                    android:inputType="number"
                    android:id="@+id/load_stock"/>


            </LinearLayout>




            <LinearLayout
                android:layout_width="90dp"
                style="@style/CodeFontInput"
                android:layout_marginLeft="10dp"
                android:visibility="gone"
                android:background="@drawable/rec_find"
                android:id="@+id/line_value"
                android:layout_height="40dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$ "
                    android:textColor="@color/word"
                    android:layout_gravity="center_vertical"
                    />

                <EditText
                    android:layout_gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text=""

                    android:background="@null"

                    android:inputType="numberDecimal"
                    android:id="@+id/value"/>


            </LinearLayout>



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/select_payment_method"
            android:visibility="gone"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:layout_height="wrap_content">


                <androidx.appcompat.widget.AppCompatCheckBox
                    android:layout_width="wrap_content"
                    android:id="@+id/check_ef"
                    android:scaleX="1.2"
                    android:scaleY="1.2"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:buttonTint="@color/word_clear"

                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/word"
                    android:text="Efectivo"
                    android:gravity="center"
                    android:layout_marginLeft="8dp"
                    android:layout_gravity="center"
                    android:textSize="16sp"

                    />

                <androidx.appcompat.widget.AppCompatCheckBox
                    android:layout_width="wrap_content"
                    android:id="@+id/check_deb"
                    android:layout_height="wrap_content"
                    android:scaleX="1.2"
                    android:scaleY="1.2"
                    android:layout_gravity="center"
                    android:layout_marginLeft="25dp"
                    android:buttonTint="@color/word_clear"

                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/word"
                    android:text="DÃ©bito"
                    android:gravity="center"
                    android:layout_marginLeft="8dp"
                    android:layout_gravity="center"
                    android:textSize="16sp"

                    />

                <androidx.appcompat.widget.AppCompatCheckBox
                    android:layout_width="wrap_content"
                    android:id="@+id/check_card"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:scaleX="1.2"
                    android:scaleY="1.2"
                    android:layout_marginLeft="25dp"
                    android:buttonTint="@color/word_clear"

                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/word"
                    android:text="Tarjeta"
                    android:gravity="center"
                    android:layout_marginLeft="8dp"
                    android:layout_gravity="center"

                    android:textSize="16sp"

                    />




        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:paddingTop="6dp"

            android:layout_height="wrap_content">

            <TextView
                style="@style/CodeFontInput"
                android:layout_gravity="center_vertical"
                android:id="@+id/date"
                android:background="@drawable/rec_find"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="40dp"
                android:layout_marginRight="40dp"
                android:visibility="invisible"
                android:textStyle="bold"
                android:gravity="center_vertical"
                android:hint=""
                />
            <Button
                android:layout_width="match_parent"
                android:layout_weight="3"
                android:layout_height="wrap_content"
                android:text="ok"
                android:id="@+id/button_ok"
                android:layout_marginLeft="10dp"
                android:layout_gravity="right"
                />


        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="6dp"
        style="@style/DivisorCategoryStyle"/>
</LinearLayout>
</RelativeLayout>
