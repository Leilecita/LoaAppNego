<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/listday"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="#e5e7e5"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:id="@+id/lineFilter"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:orientation="horizontal"
            android:padding="4dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginRight="4dp"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="4dp"
                    android:id="@+id/man"
                    android:background="@drawable/circle_unselected"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:backgroundTint="#ec7397"
                    android:orientation="horizontal"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:layout_gravity="center"
                        android:src="@drawable/man"
                        android:gravity="center"
                        />

                </LinearLayout>
                <TextView
                    android:layout_width="50sp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textMan"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Hombre"
                    android:textColor="@color/word_clear"
                    android:textSize="12sp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="4dp"
                    android:id="@+id/woman"
                    android:layout_gravity="center"
                    android:background="@drawable/circle_unselected"
                    android:backgroundTint="#73ecc8"
                    android:orientation="horizontal"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp">


                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:layout_gravity="center"
                        android:src="@drawable/femalesilhouette"
                        android:gravity="center_vertical"
                        />


                </LinearLayout>

                <TextView
                    android:layout_width="50sp"
                    android:layout_height="wrap_content"
                    android:text="Dama"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:id="@+id/textWoman"
                    android:textColor="@color/word_clear"
                    android:textSize="12sp"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"

                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="4dp"
                    android:id="@+id/boy"
                    android:layout_gravity="center"
                    android:gravity="center"

                    android:background="@drawable/circle_unselected"
                    android:backgroundTint="#73d4ec"
                    android:orientation="horizontal"
                    >

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:layout_gravity="center"
                        android:gravity="center"


                        android:src="@drawable/boy"
                        />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NiÃ±o"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:id="@+id/textBoy"
                    android:textSize="12sp"
                    android:textColor="@color/word_clear"
                    />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginLeft="4dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginRight="4dp"

                android:layout_height="wrap_content">



                <LinearLayout
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="4dp"
                    android:id="@+id/tecnico"

                    android:background="@drawable/circle_unselected"
                    android:backgroundTint="#ec8c73"
                    android:orientation="horizontal"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:layout_gravity="center"
                        android:gravity="center_vertical"
                        android:src="@drawable/board" />
                </LinearLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tecnico"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:id="@+id/textTec"
                    android:textColor="@color/word_clear"
                    android:textSize="12sp"
                    />

            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"

                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_height="wrap_content">



                <LinearLayout
                    android:layout_width="40dp"
                    android:id="@+id/acces"
                    android:layout_height="40dp"
                    android:layout_marginTop="4dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="@drawable/circle_unselected"
                    android:backgroundTint="#ecc873"
                    android:orientation="horizontal"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp">


                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:layout_gravity="center"
                        android:src="@drawable/wallet"
                        android:gravity="center_vertical"
                        />


                </LinearLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Acces"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:id="@+id/textAcc"
                    android:textColor="@color/word_clear"
                    android:textSize="12sp"
                    />

            </LinearLayout>





            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"

                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_height="wrap_content">



                <LinearLayout
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/zapas"
                    android:layout_marginTop="4dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="@drawable/circle_unselected"
                    android:backgroundTint="#c873ec"
                    android:orientation="horizontal"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:layout_gravity="center"
                        android:src="@drawable/sneaker"
                        android:gravity="center_vertical"
                        />
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Calzado"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:id="@+id/textZapas"
                    android:textColor="@color/word_clear"
                    android:textSize="12sp"
                    />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>






    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lineBrandType"
        android:visibility="visible"
        android:layout_below="@+id/lineFilter"
        android:padding="6dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:layout_weight="1"
            android:layout_marginRight="5dp"
            android:id="@+id/select_art"
            android:background="@drawable/rec_find"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/art_name"
                android:textColor="@color/word"
                android:layout_marginLeft="8dp"
                android:hint="Articulo"
                android:textSize="18sp"
                android:layout_gravity="center"
                />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:layout_weight="1"
            android:layout_marginRight="5dp"
            android:id="@+id/select_brand"
            android:background="@drawable/rec_find"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/brand_name"
                android:textColor="@color/word"
                android:hint="Marca"
                android:layout_marginLeft="8dp"
                android:textSize="18sp"
                android:layout_gravity="center"
                />




        </LinearLayout>



    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:id="@+id/line_recycler"
        android:layout_below="@+id/lineBrandType"
        android:layout_height="wrap_content">

        <androidx.recyclerview.widget.RecyclerView
            android:layout_centerHorizontal="true"
            android:id="@+id/recycler_view_grid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="6dp"
            android:layout_below="@+id/line4"
            android:scrollbars="vertical"/>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_centerHorizontal="true"
            android:id="@+id/recycler_view_grid_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="6dp"
            android:layout_below="@+id/line4"
            android:scrollbars="vertical"/>


    </LinearLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/list_products"
        android:layout_below="@+id/line_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="35dp"
        />


    <LinearLayout
        android:layout_width="180dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_margin="8dp"
        android:background="@drawable/rec_find"
        android:layout_height="30dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_gravity="center"
            android:layout_marginLeft="8dp"
            android:textColor="@color/word"
            android:text="Cantidad:  "

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:id="@+id/quantity_prod"
            android:layout_gravity="center"
            android:textColor="@color/word"
            android:text=""

            />

    </LinearLayout>

</RelativeLayout>

