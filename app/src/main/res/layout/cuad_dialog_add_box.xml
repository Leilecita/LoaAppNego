<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view_mistake"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    card_view:cardCornerRadius="5dp"
    card_view:cardElevation="2dp"
    card_view:cardMaxElevation="4dp"
    android:backgroundTint="#ededed"
    card_view:contentPadding="10dp"
    >

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="Caja del dÃ­a"
            android:textSize="18sp"
            android:textColor="@color/title_dialog_info"
            android:gravity="center"
            android:textStyle="bold"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="2dp"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="8dp"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/date"
                    android:layout_height="33dp"
                    android:paddingLeft="8dp"
                    style="@style/Widget.Design.TextInputLayout"
                    android:layout_width="match_parent"
                    android:textColor="#5c5c5c"
                    android:textSize="16sp"
                    android:gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="@drawable/rec_text_edit"
                    android:inputType="textCapWords" />
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_weight="5"
                    android:id="@+id/date_picker"
                    android:layout_height="33dp"
                    android:src="@drawable/date"
                    />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/counted_sale"
                android:layout_height="33dp"
                android:layout_weight="1"
                android:paddingLeft="8dp"
                android:layout_marginRight="8dp"
                style="@style/Widget.Design.TextInputLayout"
                android:layout_width="match_parent"
                android:hint="Venta contado"
                android:textColor="#5c5c5c"
                android:textSize="16sp"
                android:background="@drawable/rec_text_edit"
                android:inputType="textCapWords" />

            <EditText
                android:id="@+id/credit_card"
                android:layout_height="33dp"
                android:layout_weight="1"
                android:paddingLeft="8dp"
                android:layout_marginRight="8dp"
                style="@style/Widget.Design.TextInputLayout"
                android:layout_width="match_parent"
                android:hint="Tarjeta"
                android:textColor="#5c5c5c"
                android:textSize="16sp"
                android:background="@drawable/rec_text_edit"
                android:inputType="textCapWords" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/total_amount"
                android:layout_height="33dp"
                android:layout_weight="1"
                android:paddingLeft="8dp"
                android:layout_marginRight="8dp"
                style="@style/Widget.Design.TextInputLayout"
                android:layout_width="match_parent"
                android:hint="Caja total"
                android:textColor="#5c5c5c"
                android:textSize="16sp"
                android:background="@drawable/rec_text_edit"
                android:inputType="textCapWords" />

            <EditText
                android:id="@+id/rest_box"
                android:layout_height="33dp"
                android:layout_weight="1"
                android:paddingLeft="8dp"
                android:layout_marginRight="8dp"
                style="@style/Widget.Design.TextInputLayout"
                android:layout_width="match_parent"
                android:hint="Resto de caja"
                android:textColor="#5c5c5c"
                android:textSize="16sp"
                android:background="@drawable/rec_text_edit"
                android:inputType="textCapWords" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="2dp"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:orientation="horizontal">
                <EditText
                    android:id="@+id/deposit"
                    android:hint="Deposito"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    style="@style/Widget.Design.TextInputLayout"
                    android:layout_marginRight="8dp"
                    android:paddingLeft="8dp"
                    android:textColor="#5c5c5c"
                    android:layout_height="33dp"
                    android:textSize="16sp"
                    android:background="@drawable/rec_text_edit"
                    />

                <EditText
                    android:id="@+id/detail"
                    android:layout_height="33dp"
                    android:layout_weight="1"
                    android:paddingLeft="8dp"
                    android:layout_marginRight="8dp"
                    style="@style/Widget.Design.TextInputLayout"
                    android:layout_width="match_parent"
                    android:hint="Detalle"
                    android:textColor="#5c5c5c"
                    android:textSize="16sp"
                    android:background="@drawable/rec_text_edit"
                    android:inputType="textCapWords" />



            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="250dp"
                android:id="@+id/select_photo"
                android:layout_height="35dp"
                android:textColor="#ffff"
                android:padding="4dp"
                android:src="@drawable/camera"
                android:layout_marginTop="8dp"
                android:background="@color/colorDialogButton"

               />

            <ImageView
                android:layout_width="35dp"
                android:id="@+id/imageview"
                android:layout_height="35dp"
                android:textColor="#ffff"
                android:padding="4dp"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="8dp"
                android:src="@drawable/camera"

                />




        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:id="@+id/cancel"
                android:layout_weight="1"
                android:text="CANCELAR"
                android:gravity="center"
                android:textColor="@color/colorDialogButton"
                android:textStyle="bold"
                />

            <Button
                android:layout_width="match_parent"
                android:id="@+id/ok"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:textColor="#ffff"
                android:padding="4dp"
                android:background="@color/colorDialogButton"
                android:text="guardar"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>



