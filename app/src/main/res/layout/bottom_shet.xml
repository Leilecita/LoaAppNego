<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottomSheet"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:orientation="vertical"
    android:background="@drawable/rec_find"
    android:backgroundTint="@color/background_bottom_shet"

    app:layout_behavior="@string/bottom_sheet_behavior"
    app:behavior_hideable="false"
    app:behavior_peekHeight="64dp" >


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginBottom="8dp"
        android:layout_height="wrap_content">


        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:src="@drawable/funnel"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:paddingLeft="8sp"
            android:id="@+id/filt"
            android:text="FILTROS" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:id="@+id/lineFilter"
        android:orientation="vertical">

        <HorizontalScrollView
            android:id="@+id/hsv"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:fillViewport="true"
            android:measureAllChildren="false"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:orientation="horizontal"
                android:padding="4dp"
                >

                <LinearLayout
                    android:layout_width="55dp"
                    android:orientation="vertical"

                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:layout_height="wrap_content">



                    <LinearLayout
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:id="@+id/all"
                        android:layout_marginTop="4dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:background="@drawable/circle_unselected"
                        android:backgroundTint="@color/todos"
                        android:orientation="horizontal"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:padding="2dp"
                            android:layout_gravity="center"
                            android:gravity="center_vertical"
                            />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/textAll"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="Todos"
                        android:textColor="@color/word_clear"
                        android:textSize="12sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="55dp"
                    android:orientation="vertical"
                    android:layout_marginRight="4dp"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="4dp"
                        android:id="@+id/man"
                        android:background="@drawable/circle_unselected"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:backgroundTint="@color/hombre"
                        android:orientation="horizontal"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:layout_gravity="center"
                            android:src="@drawable/man"
                            android:gravity="center"
                            />

                    </LinearLayout>
                    <TextView
                        android:layout_width="50sp"
                        android:layout_height="wrap_content"
                        android:id="@+id/textMan"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="Hombre"
                        android:textColor="@color/word_clear"
                        android:textSize="12sp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="55dp"
                    android:orientation="vertical"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="4dp"
                        android:id="@+id/woman"
                        android:layout_gravity="center"
                        android:background="@drawable/circle_unselected"
                        android:backgroundTint="@color/dama"
                        android:orientation="horizontal"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp">


                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:layout_gravity="center"
                            android:src="@drawable/femalesilhouette"
                            android:gravity="center_vertical"
                            />

                    </LinearLayout>

                    <TextView
                        android:layout_width="50sp"
                        android:layout_height="wrap_content"
                        android:text="Dama"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:id="@+id/textWoman"
                        android:textColor="@color/word_clear"
                        android:textSize="12sp"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="55dp"
                    android:orientation="vertical"

                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:layout_height="wrap_content">


                    <LinearLayout
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="4dp"
                        android:id="@+id/boy"
                        android:layout_gravity="center"
                        android:gravity="center"

                        android:background="@drawable/circle_unselected"
                        android:backgroundTint="@color/niño"
                        android:orientation="horizontal"
                        >

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:layout_gravity="center"
                            android:gravity="center"


                            android:src="@drawable/boy"
                            />

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Niño"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:id="@+id/textBoy"
                        android:textSize="12sp"
                        android:textColor="@color/word_clear"
                        />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="55dp"
                    android:orientation="vertical"
                    android:layout_marginLeft="4dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginRight="4dp"

                    android:layout_height="wrap_content">



                    <LinearLayout
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="4dp"
                        android:id="@+id/tecnico"

                        android:background="@drawable/circle_unselected"
                        android:backgroundTint="@color/tecnico"
                        android:orientation="horizontal"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:layout_gravity="center"
                            android:gravity="center_vertical"
                            android:src="@drawable/board" />
                    </LinearLayout>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tecnico"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:id="@+id/textTec"
                        android:textColor="@color/word_clear"
                        android:textSize="12sp"
                        />

                </LinearLayout>



                <LinearLayout
                    android:layout_width="55dp"
                    android:orientation="vertical"

                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:layout_height="wrap_content">



                    <LinearLayout
                        android:layout_width="40dp"
                        android:id="@+id/acces"
                        android:layout_height="40dp"
                        android:layout_marginTop="4dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:background="@drawable/circle_unselected"
                        android:backgroundTint="@color/accesorio"
                        android:orientation="horizontal"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp">


                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:layout_gravity="center"
                            android:src="@drawable/wallet"
                            android:gravity="center_vertical"
                            />


                    </LinearLayout>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Acces"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:id="@+id/textAcc"
                        android:textColor="@color/word_clear"
                        android:textSize="12sp"
                        />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="55dp"
                    android:layout_height="wrap_content"

                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:orientation="vertical">


                    <LinearLayout
                        android:id="@+id/zapas"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="4dp"
                        android:background="@drawable/circle_unselected"
                        android:backgroundTint="@color/calzado"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:layout_gravity="center"
                            android:gravity="center_vertical"
                            android:src="@drawable/sneaker" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/textZapas"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="Calzado"
                        android:textColor="@color/word_clear"
                        android:textSize="12sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="55dp"
                    android:orientation="vertical"

                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:layout_height="wrap_content">



                    <LinearLayout
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:id="@+id/luz"
                        android:layout_marginTop="4dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:background="@drawable/circle_unselected"
                        android:backgroundTint="@color/luz"
                        android:orientation="horizontal"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:layout_gravity="center"
                            android:src="@drawable/femalesilhouette"
                            android:gravity="center_vertical"
                            />
                    </LinearLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Luz"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:id="@+id/textLuz"
                        android:textColor="@color/word_clear"
                        android:textSize="12sp"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="55dp"
                    android:orientation="vertical"

                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:layout_height="wrap_content">



                    <LinearLayout
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:id="@+id/oferta"
                        android:layout_marginTop="4dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:background="@drawable/circle_unselected"
                        android:backgroundTint="@color/oferta"
                        android:orientation="horizontal"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:padding="2dp"
                            android:layout_gravity="center"
                            android:src="@drawable/gift"
                            android:gravity="center_vertical"
                            />
                    </LinearLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Oferta"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:id="@+id/textOferta"
                        android:textColor="@color/word_clear"
                        android:textSize="12sp"
                        />

                </LinearLayout>




            </LinearLayout>


        </HorizontalScrollView>



    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_height="wrap_content">


            <LinearLayout
                android:id="@+id/new_income"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginTop="4dp"
                android:background="@drawable/circle"
                android:backgroundTint="#3BD1C3"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingLeft="8dp"
                android:paddingRight="8dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:gravity="center_vertical"
                    android:padding="2dp"
                    android:src="@drawable/add_white" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Nueva entrada"
                android:textColor="@color/word_clear"
                android:textSize="12sp" />

        </LinearLayout>





    </LinearLayout>


</LinearLayout>