<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/listday"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ededed"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:id="@+id/line1"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="4dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ArtÃ­culo : "
            android:textColor="@color/word"
            android:textSize="18sp"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Remera "
            android:textSize="18sp"
            android:textColor="@color/word"
            android:id="@+id/type_product"
          />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:textColor="@color/word"
            android:text="Remera "
            android:textSize="18sp"
            android:id="@+id/brand_product"
          />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_below="@id/line1"
        android:id="@+id/balance"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="4dp"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:textSize="16sp"
            android:layout_height="wrap_content"
            android:text="Fecha"
            android:layout_gravity="center_vertical"
            android:textColor="@color/word"
            android:textStyle="bold"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textColor="@color/word"
            android:textSize="16sp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Stock inicial/actual"
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:textSize="16sp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:textColor="@color/word"
            android:text="Ingresos"
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:textSize="16sp"
            android:textColor="@color/word"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:text="Ventas"
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:textSize="16sp"
            android:layout_height="wrap_content"
            android:text="Stock ideal"
            android:textColor="@color/word"
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="@color/word"
            android:text="Balance Stock real"
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="@color/word"
            android:text="Dif"
            android:textStyle="bold"
            />
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/list_stock_events"
        android:layout_below="@+id/balance"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="80dp"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="8dp"
        android:id="@+id/balance_item"
        android:text="Generar balance"
        />


</RelativeLayout>