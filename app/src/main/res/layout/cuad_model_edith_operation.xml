<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view_edith_user"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="15dp"
    card_view:cardCornerRadius="5dp"
    card_view:cardElevation="2dp"
    card_view:cardMaxElevation="4dp"
    android:backgroundTint="#ededed"
    card_view:contentPadding="10dp"


    >

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:text="Editar"
            android:textSize="18sp"
            android:textColor="@color/word"
            android:gravity="center"
            android:textStyle="bold"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_weight="4"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:padding="0dp"
                    android:textSize="16sp"
                    android:textColor="@color/word"
                    android:text="Fecha"/>


                <TextView
                    android:id="@+id/edit_date"
                    android:layout_height="33dp"
                    android:paddingLeft="8dp"
                    android:layout_weight="2"
                    style="@style/Widget.Design.TextInputLayout"
                    android:layout_width="match_parent"
                    android:textColor="@color/colorDialogButton"
                    android:textSize="16sp"
                    android:gravity="center_vertical"
                    android:background="@drawable/rec_text_edit"
                    android:inputType="textCapWords" />

                <ImageView
                    android:layout_width="match_parent"
                    android:id="@+id/date_picker"
                    android:layout_weight="4"
                    android:layout_height="33dp"
                    android:padding="2dp"
                    android:src="@drawable/date"/>

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:orientation="vertical">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Valor "
                    android:textStyle="bold"
                    android:padding="0dp"
                    android:textSize="16sp"
                    android:textColor="@color/word"

                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/value"
                    android:textSize="16dp"
                    android:padding="4dp"
                    android:layout_marginRight="8dp"
                    android:textStyle="italic"
                    android:textColor="@color/colorDialogButton" />


                <EditText

                    android:id="@+id/edit_valueNegative"
                    android:layout_width="60dp"
                    android:layout_marginRight="28dp"
                    style="@style/Widget.Design.TextInputLayout"
                    android:paddingLeft="8dp"
                    android:hint="-"
                    android:textColor="#5c5c5c"
                    android:layout_height="35dp"
                    android:textSize="16sp"
                    android:background="@drawable/rec_text_edit"
                    />

                <EditText
                    android:id="@+id/edit_valuePositive"
                    android:layout_width="60dp"
                    android:layout_marginRight="28dp"
                    style="@style/Widget.Design.TextInputLayout"
                    android:paddingLeft="8dp"
                    android:textColor="#5c5c5c"
                    android:hint="+"
                    android:layout_height="35dp"
                    android:textSize="16sp"
                    android:background="@drawable/rec_text_edit"
                    />

            </LinearLayout>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="C: "
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/word"
                />

            <EditText
                android:id="@+id/code"
                android:layout_weight="1"
                android:layout_height="33dp"
                android:paddingLeft="8dp"
                android:layout_marginRight="8dp"
                style="@style/Widget.Design.TextInputLayout"
                android:layout_width="match_parent"
                android:hint="Codigo"
                android:textColor="@color/colorDialogButton"
                android:textSize="16sp"
                android:background="@drawable/rec_text_edit"
                android:inputType="textCapWords" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="M: "
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/word"
                />
            <EditText
                android:id="@+id/brand"
                android:layout_height="33dp"
                android:paddingLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                style="@style/Widget.Design.TextInputLayout"
                android:layout_width="match_parent"
                android:hint="Marca"
                android:textColor="@color/colorDialogButton"
                android:textSize="16sp"
                android:background="@drawable/rec_text_edit"
                android:inputType="textCapWords" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="T: "
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/word"
                />
            <EditText
                android:id="@+id/size"
                android:layout_height="33dp"
                android:paddingLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                style="@style/Widget.Design.TextInputLayout"
                android:layout_width="match_parent"
                android:hint="Talle"
                android:textColor="@color/colorDialogButton"
                android:textSize="16sp"
                android:background="@drawable/rec_text_edit"
                android:inputType="textCapWords" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="P: "
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/word" />

            <EditText
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:id="@+id/product_kind"
                android:layout_height="33dp"
                android:paddingLeft="8dp"
                android:textSize="16sp"
                style="@style/Widget.Design.TextInputLayout"
                android:textColor="@color/colorDialogButton"
                android:background="@drawable/rec_text_edit"
                android:inputType="textCapWords"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="D:"
                android:textStyle="bold"
                android:padding="4dp"
                android:textSize="16sp"
                android:textColor="@color/word" />

            <EditText
                android:layout_width="match_parent"
                android:id="@+id/description"
                android:layout_weight="1"
                android:layout_height="33dp"
                android:paddingLeft="8dp"
                android:textSize="16sp"
                style="@style/Widget.Design.TextInputLayout"
                android:textColor="@color/colorDialogButton"
                android:background="@drawable/rec_text_edit"
                android:inputType="textCapWords"

                />
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/cancel"
                android:layout_weight="1"
                android:text="CANCELAR"
                android:gravity="center"
                android:textColor="@color/colorDialogButton"
                android:textStyle="bold"
                />

            <Button
                android:layout_width="match_parent"
                android:id="@+id/ok"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:textColor="#ffff"
                android:padding="4dp"
                android:background="@color/colorDialogButton"
                android:text="guardar"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
