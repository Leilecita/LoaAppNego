<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="12dp"
    android:layout_marginRight="12dp"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_gravity="center_vertical"
        android:orientation="vertical"
        android:paddingBottom="2dp"
        android:gravity="center_vertical"
        android:layout_height="@dimen/item_height">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:id="@+id/imagebutton"
                android:layout_gravity="center"
                android:gravity="center"
                android:src="@drawable/ballcl"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:id="@+id/type"
                    android:paddingLeft="8dp"
                    android:textColor="@color/colorPrimaryDarkLetter"
                    android:textSize="@dimen/general_text"
                    android:gravity="center_vertical"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Buzo canguroasdasd"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_weight="1.4"
                    android:textColor="@color/colorPrimaryDarkLetter"
                    android:gravity="center"
                    android:maxLines="1"
                    android:textSize="@dimen/general_text"
                    android:paddingLeft="2dp"
                    android:id="@+id/brand"
                    android:layout_height="wrap_content"
                    android:text="captain "
                    />

                <TextView
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:layerType="software"
                    android:background="@drawable/line_vertical"/>
                <TextView
                    android:layout_width="match_parent"
                    android:id="@+id/cant_stock_out"
                    android:layout_weight="1.6"
                    android:gravity="center"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/general_text"
                    android:layout_height="wrap_content"
                    android:text=""
                    />

                <TextView
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:layerType="software"
                    android:background="@drawable/line_vertical"/>



                <TextView
                    android:layout_width="match_parent"
                    android:layout_weight="1.5"
                    android:id="@+id/value"
                    android:gravity="right"
                    android:textColor="@color/price"
                    android:textSize="@dimen/general_text"
                    android:paddingRight="5dp"
                    android:layout_height="wrap_content"
                    android:text="$."
                    />



            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/line2"
            android:paddingTop="@dimen/padding_top"
            android:orientation="horizontal"
            >

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:gravity="center"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:paddingLeft="8dp"
                    android:gravity="center_vertical"
                    android:layout_weight="1.2"
                    android:id="@+id/model"
                    android:textColor="@color/word_clear"
                    android:textSize="@dimen/small_text"
                    android:layout_height="wrap_content"
                    android:text="model"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:id="@+id/detailup"
                    android:text="ingreso actualizacion app"
                    />



            </LinearLayout>

        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginLeft="32sp"
            android:id="@+id/div"
            android:layout_below="@id/line2"
            android:background = "@drawable/line"/>
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/line_edit"
        android:layout_marginLeft="32dp"
        android:visibility="gone"
        android:orientation="vertical"
        >

        <HorizontalScrollView
            android:id="@+id/hsv"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:fillViewport="true"
            android:measureAllChildren="false"
            android:scrollbars="none">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp"
                android:layout_height="wrap_content">

                <EditText
                    android:layout_width="wrap_content"
                    android:id="@+id/value_edit"
                    android:textColor="@color/word_clear"
                    android:textSize="17sp"
                    android:background="@drawable/rec_find"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:layout_marginRight="4dp"
                    android:layout_height="wrap_content"
                    android:text=""
                    />

                <EditText
                    android:layout_width="wrap_content"
                    android:id="@+id/observation"
                    android:textColor="@color/word_clear"
                    android:textSize="17sp"
                    android:background="@drawable/rec_find"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:layout_marginRight="4dp"
                    android:layout_height="wrap_content"
                    android:text=""
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rec_find"
                    android:id="@+id/date_edit"
                    android:layout_marginRight="4dp"
                    android:textColor="@color/word_clear"
                    android:textSize="17sp"
                    android:text=""
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"

                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rec_find"
                    android:id="@+id/payment_method"
                    android:textColor="@color/word_clear"
                    android:textSize="17sp"
                    android:layout_marginRight="4dp"
                    android:text=""
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"

                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rec_find"
                    android:id="@+id/detail"
                    android:textColor="@color/word_clear"
                    android:layout_marginRight="4dp"
                    android:textSize="17sp"
                    android:text=""
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"

                    />
            </LinearLayout>



        </HorizontalScrollView>

    </LinearLayout>

</LinearLayout>
