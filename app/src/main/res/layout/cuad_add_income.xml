<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view_mistake"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rec_dialog"
    android:backgroundTint="@color/background"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dialog_margin_bottom"
        android:layout_marginTop="@dimen/dialog_margin_top"
        android:layout_marginLeft="@dimen/dialog_margin_left"
        android:layout_marginRight="@dimen/dialog_margin_right"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="Seña "
            android:textSize="20sp"
            android:textColor="@color/title_dialog_info"
            android:gravity="center"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="2dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                >


                <TextView
                    android:id="@+id/date"
                    android:layout_height="35dp"
                    style="@style/Widget.Design.TextInputLayout"
                    android:layout_width="match_parent"
                    android:textColor="@color/word"
                    android:background="@drawable/rec_find"
                    android:text=""
                    android:paddingLeft="8dp"
                    android:textSize="@dimen/general_text"
                    android:fontFamily="@font/opensanslight"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical"
                    android:inputType="textCapWords" />


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="2dp"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                >


                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:textColor="@color/word"
                    android:id="@+id/name"
                    android:textSize="@dimen/general_text"
                    android:fontFamily="@font/opensanslight"
                    android:paddingLeft="8dp"
                    android:background="@drawable/rec_find"
                    android:hint="Nombre y apellido"
                    android:layout_gravity="center_vertical|left"
                    android:gravity="center_vertical|left"
                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                >

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:textColor="@color/word"
                    android:textSize="@dimen/general_text"
                    android:fontFamily="@font/opensanslight"
                    android:id="@+id/phone"

                    android:paddingLeft="8dp"
                    android:background="@drawable/rec_find"
                    android:hint="Teléfono"
                    android:layout_gravity="center_vertical|left"
                    android:gravity="center_vertical|left"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                >

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:textColor="@color/word"
                    android:textSize="@dimen/general_text"
                    android:fontFamily="@font/opensanslight"
                    android:id="@+id/adress"

                    android:paddingLeft="8dp"
                    android:background="@drawable/rec_find"
                    android:hint="Dirección"
                    android:layout_gravity="center_vertical|left"
                    android:gravity="center_vertical|left"
                    />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                >

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:textColor="@color/word"
                    android:id="@+id/description"
                    android:textSize="@dimen/general_text"
                    android:fontFamily="@font/opensanslight"
                    android:paddingLeft="8dp"
                    android:background="@drawable/rec_find"
                    android:hint="Detalle"
                    android:layout_gravity="center_vertical|left"
                    android:gravity="center_vertical|left"
                    />


            </LinearLayout>

        </LinearLayout>





        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="2dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">


                <EditText
                    android:id="@+id/value"
                    android:layout_width="match_parent"
                    android:layout_marginRight="4dp"
                    android:layout_weight="1"
                    android:textColor="@color/word"
                    android:background="@drawable/rec_find"
                    android:text=""
                    android:inputType="numberDecimal"
                    android:textSize="@dimen/general_text"
                    android:fontFamily="@font/opensanslight"
                    android:hint="$ seña"
                    android:paddingLeft="8dp"
                    android:layout_gravity="bottom"
                    android:layout_height="40dp"


                    />

                <EditText
                    android:id="@+id/value_product"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="4dp"
                    android:inputType="numberDecimal"
                    android:layout_weight="1"
                    android:textColor="@color/word"
                    android:background="@drawable/rec_find"
                    android:textSize="@dimen/general_text"
                    android:fontFamily="@font/opensanslight"
                    android:hint="$ producto"

                    android:paddingLeft="8dp"
                    android:layout_gravity="bottom"
                    android:layout_height="40dp"


                    />



            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:id="@+id/select_payment_method"
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                android:layout_height="wrap_content">


                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <androidx.appcompat.widget.AppCompatCheckBox
                                android:layout_width="wrap_content"
                                android:id="@+id/check_ef"
                                android:layout_height="wrap_content"
                                android:scaleX="1.2"
                                android:scaleY="1.2"
                                android:layout_gravity="center"
                                android:buttonTint="@color/colorPrimaryClear"

                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorPrimaryDarkLetter"
                                android:text="Efectivo"
                                android:gravity="center"
                                android:layout_marginLeft="6dp"
                                android:layout_gravity="center"
                                android:textSize="16sp"

                                />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <androidx.appcompat.widget.AppCompatCheckBox
                                android:layout_width="wrap_content"
                                android:id="@+id/check_deb"
                                android:layout_height="wrap_content"
                                android:scaleX="1.2"
                                android:scaleY="1.2"
                                android:layout_gravity="center"
                                android:layout_marginLeft="16dp"
                                android:buttonTint="@color/colorPrimaryClear"

                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorPrimaryDarkLetter"
                                android:text="Débito"
                                android:gravity="center"
                                android:layout_marginLeft="6dp"
                                android:layout_gravity="center"
                                android:textSize="16sp"

                                />
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <androidx.appcompat.widget.AppCompatCheckBox
                                android:layout_width="wrap_content"
                                android:id="@+id/check_card"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:scaleX="1.2"
                                android:scaleY="1.2"
                                android:layout_marginLeft="16dp"
                                android:buttonTint="@color/colorPrimaryClear"

                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorPrimaryDarkLetter"
                                android:text="Tarjeta"
                                android:gravity="center"
                                android:layout_marginLeft="6dp"
                                android:layout_gravity="center"

                                android:textSize="16sp"

                                />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <androidx.appcompat.widget.AppCompatCheckBox
                                android:layout_width="wrap_content"
                                android:id="@+id/check_transf"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:scaleX="1.2"
                                android:scaleY="1.2"
                                android:layout_marginLeft="16dp"
                                android:buttonTint="@color/colorPrimaryClear"

                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorPrimaryDarkLetter"
                                android:text="Transferencia"
                                android:gravity="center"
                                android:layout_marginLeft="6dp"
                                android:layout_gravity="center"

                                android:textSize="16sp"

                                />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <androidx.appcompat.widget.AppCompatCheckBox
                                android:layout_width="wrap_content"
                                android:id="@+id/check_merc"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:scaleX="1.2"
                                android:scaleY="1.2"
                                android:layout_marginLeft="16dp"
                                android:buttonTint="@color/colorPrimaryClear"

                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorPrimaryDarkLetter"
                                android:text="Mercado pago"
                                android:gravity="center"
                                android:layout_marginLeft="6dp"
                                android:layout_gravity="center"

                                android:textSize="16sp"

                                />

                        </LinearLayout>

                    </LinearLayout>


                </HorizontalScrollView>


            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_marginTop="8dp"
                android:textSize="@dimen/general_text"
                android:layout_height="wrap_content"
                android:text="Obs : Con seña no se pueden retirar productos, solo se dejan guardados hasta completar el valor total."
                />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:id="@+id/cancel"
                android:layout_weight="1"
                android:text="CANCELAR"
                android:gravity="center"
                android:textColor="@color/colorDialogButton"
                android:textStyle="bold"
                />

            <Button
                android:layout_width="match_parent"
                android:id="@+id/ok"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:textColor="#ffff"

                android:padding="4dp"
                android:background="@drawable/rec_find"
                android:backgroundTint="@color/colorDialogButton"
                android:text="guardar"/>

        </LinearLayout>

    </LinearLayout>
    </LinearLayout>
    </LinearLayout>




