<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view_mistake"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rec_dialog"
    android:backgroundTint="@color/background"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dialog_margin_bottom"
        android:layout_marginTop="@dimen/dialog_margin_top"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="Producto"
            android:textSize="18sp"
            android:gravity="center"
            android:textColor="@color/word"
            android:textStyle="bold"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingTop="8dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="Item"
                android:textSize="16sp"
                android:id="@+id/item"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:textColor="@color/word"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text=" - "
                android:textSize="16sp"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:textColor="@color/word"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="Producto"
                android:id="@+id/type"
                android:textSize="16sp"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:textColor="@color/word"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text=" - "
                android:textSize="16sp"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:textColor="@color/word"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="Marca"
                android:textSize="16sp"
                android:id="@+id/brand"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:textColor="@color/word"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text=" - "
                android:textSize="16sp"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:textColor="@color/word"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:id="@+id/model"
                android:text="Modelo"
                android:textSize="16sp"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:textColor="@color/word"
                />
        </LinearLayout>












        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_weight="1.5"
                android:layout_gravity="center"
                android:id="@+id/delete"
                android:gravity="center"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="35dp"
                    android:src="@drawable/deleteuser"

                    android:padding="12dp"
                    android:layout_height="35dp"
                    android:background="@drawable/circle_product"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_weight="1.5"
                android:layout_gravity="center"
                android:id="@+id/price"
                android:gravity="center"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="35dp"

                    android:padding="12dp"
                    android:layout_height="35dp"
                    android:background="@drawable/circle_product"
                    />

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>

