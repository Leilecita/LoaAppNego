<?xml version="1.0" encoding="utf-8"?>

<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondoprincipal2">


    <RelativeLayout
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_marginBottom="40dp"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerInParent="true"
        android:id="@+id/mercaderia"
        android:src="@drawable/mercaderia"/>

    <ImageView
        android:layout_width="120dp"
        android:id="@+id/extractions"
        android:layout_above="@id/mercaderia"
        android:layout_toLeftOf="@id/box"
        android:layout_marginBottom="-20dp"
        android:layout_marginRight="5dp"
        android:layout_height="120dp"
        android:src="@drawable/extracciones"/>

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:id="@+id/listcajas"
        android:layout_toRightOf="@+id/box"
        android:layout_marginLeft="5dp"
        android:layout_above="@id/mercaderia"
        android:layout_marginBottom="-20dp"
        android:src="@drawable/listcajas"/>

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginBottom="20dp"
        android:id="@+id/box"
        android:layout_above="@id/mercaderia"
        android:layout_centerHorizontal="true"
        android:src="@drawable/cierrecaja"/>



    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:id="@+id/statistics"
        android:layout_marginTop="-30dp"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/clients"
        android:layout_below="@id/mercaderia"
        android:src="@drawable/bestatistics"/>

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:id="@+id/clients"
        android:layout_marginTop="18dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/mercaderia"
        android:src="@drawable/bdebt"/>

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_below="@id/mercaderia"
        android:layout_marginTop="-30dp"
        android:layout_marginRight="5dp"
        android:id="@+id/hours"
        android:layout_toLeftOf="@id/clients"
        android:src="@drawable/bpersonal"/>






</RelativeLayout>
</LinearLayout>