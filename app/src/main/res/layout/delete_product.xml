<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view_mistake"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rec_dialog"
    android:backgroundTint="@color/background"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dialog_margin_bottom"
        android:layout_marginTop="@dimen/dialog_margin_top"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:text="Producto"
            android:textSize="18sp"
            android:textColor="@color/word"
            android:gravity="center"
            android:textStyle="bold"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/type"
                android:textStyle="italic"

                android:padding="4dp"
                android:textSize="16sp"
                android:textColor="#2e2d2d" />



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" - "
                android:padding="4dp"
                android:textSize="16sp"
                android:textColor="#6e6e6e" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/brand"
                android:padding="4dp"
                android:textSize="16sp"
                android:textColor="#2e2d2d" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" - "
                android:padding="4dp"
                android:textSize="16sp"
                android:textColor="#6e6e6e" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/stock"
                android:padding="4dp"
                android:textSize="16sp"
                android:textColor="#2e2d2d" />

        </LinearLayout>

        <EditText
            android:id="@+id/obs"
            android:layout_height="33dp"
            android:layout_weight="1"
            android:layout_marginTop="8dp"
            android:paddingLeft="8dp"
            android:layout_marginRight="8dp"
            style="@style/Widget.Design.TextInputLayout"
            android:layout_width="match_parent"
            android:hint="Ingrese detalle de borrado "
            android:textColor="@color/colorPrimaryClearLetter"
            android:fontFamily="@font/opensanslight"
            android:textSize="16sp"
            android:background="@drawable/rec_text_edit"
            android:inputType="textCapWords" />




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:id="@+id/cancel"

                android:fontFamily="@font/opensansregular"
                android:layout_weight="1"
                android:text="Cancelar"
                android:gravity="center"
                android:textColor="@color/colorDialogButton"
                />

            <Button
                android:layout_width="match_parent"
                android:id="@+id/ok"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:textColor="#ffff"
                android:padding="4dp"
                android:background="@drawable/rec_find"
                android:backgroundTint="@color/colorDialogButton"
                android:text="Borrar"/>



        </LinearLayout>

    </LinearLayout>
    </LinearLayout>


