<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottomSheet"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:orientation="vertical"
    android:backgroundTint="@color/background_bottom_shet"
    android:background="@drawable/rec_find"
    app:layout_behavior="@string/bottom_sheet_behavior"
    app:behavior_hideable="false"
    app:behavior_peekHeight="80dp" >



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:id="@+id/lineFilter"
        android:orientation="vertical">

        <HorizontalScrollView
            android:id="@+id/hsv"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:fillViewport="true"
            android:measureAllChildren="false"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:orientation="horizontal"
                android:padding="4dp"
                >



                    <ImageView
                        android:layout_width="40dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:id="@+id/all"
                        android:layout_height="40dp"
                        android:src="@drawable/ball"/>

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:id="@+id/man"
                        android:layout_height="40dp"
                        android:src="@drawable/bmancl"/>

                    <ImageView
                        android:layout_width="40dp"
                        android:id="@+id/woman"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_height="40dp"
                        android:src="@drawable/bwomcl"/>


                    <ImageView
                        android:layout_width="40dp"
                        android:id="@+id/boy"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_height="40dp"
                        android:src="@drawable/bnincl"/>


                    <ImageView
                        android:layout_width="40dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:id="@+id/tecnico"
                        android:layout_height="40dp"
                        android:src="@drawable/btecl"/>

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:id="@+id/acces"
                        android:src="@drawable/bacccl"/>

                    <ImageView
                        android:layout_width="40dp"
                        android:id="@+id/zapas"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_height="40dp"
                        android:src="@drawable/bcalcl"/>

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:id="@+id/luz"
                        android:src="@drawable/bluzcl"/>

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_height="40dp"
                        android:id="@+id/oferta"
                        android:src="@drawable/bofercl"/>

            </LinearLayout>


        </HorizontalScrollView>



    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="8dp"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="40dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:id="@+id/mes"
            android:src="@drawable/mescl2"
            android:layout_height="40dp" />

        <ImageView
            android:layout_width="40dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:id="@+id/dia"
            android:src="@drawable/bdia"
            android:layout_height="40dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_height="wrap_content">



                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/new_income"
                    android:layout_gravity="center"
                    android:gravity="center_vertical"
                    android:src="@drawable/bsecl" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Nueva"
                android:textColor="@color/word_clear"
                android:textSize="12sp" />

        </LinearLayout>





    </LinearLayout>


</LinearLayout>