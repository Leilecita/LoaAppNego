<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/listday"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@color/background"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background"
        android:id="@+id/lineFilter"
        android:orientation="vertical">

        <HorizontalScrollView
            android:id="@+id/hsv"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:fillViewport="true"
            android:measureAllChildren="false"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="6dp"
                android:orientation="horizontal"
                android:padding="4dp"
                >



                <ImageView
                    android:layout_width="45dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:id="@+id/all"
                    android:layout_height="45dp"
                    android:src="@drawable/ball"/>

                <ImageView
                    android:layout_width="45dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:id="@+id/man"
                    android:layout_height="45dp"
                    android:src="@drawable/bmancl"/>

                <ImageView
                    android:layout_width="45dp"
                    android:id="@+id/woman"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_height="45dp"
                    android:src="@drawable/bwomcl"/>

                <ImageView
                    android:layout_width="45dp"
                    android:id="@+id/zapas"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_height="45dp"
                    android:src="@drawable/bcalcl"/>

                <ImageView
                    android:layout_width="45dp"
                    android:id="@+id/boy"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_height="45dp"
                    android:src="@drawable/bnincl"/>


                <ImageView
                    android:layout_width="45dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:id="@+id/tecnico"
                    android:layout_height="45dp"
                    android:src="@drawable/btecl"/>

                <ImageView
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:id="@+id/acces"
                    android:src="@drawable/bacccl"/>



                <ImageView
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:id="@+id/luz"
                    android:src="@drawable/bluzcl"/>

                <ImageView
                    android:layout_width="45dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_height="45dp"
                    android:id="@+id/oferta"
                    android:src="@drawable/bofercl"/>

            </LinearLayout>



       </HorizontalScrollView>



    </LinearLayout>

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        android:layout_below="@id/lineFilter"
        >


<LinearLayout
    android:layout_width="match_parent"
    android:layout_below="@id/lineFilter"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lineBrandType"
        android:layout_below="@+id/lineFilter"
        android:padding="6dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35sp"
            android:layout_weight="1"
            android:layout_marginRight="5dp"
            android:id="@+id/select_art"
            android:background="@drawable/rec_find"
            android:orientation="horizontal">

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/art_name"
              android:textColorHint="@color/letter_cuad_in"
              android:textColor="@color/colorPrimaryDarkLetter"
              android:layout_marginLeft="8dp"
              android:hint="Articulo"
              android:textSize="16sp"
              android:layout_gravity="center"
              />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:layout_marginRight="5dp"
            android:id="@+id/select_brand"
            android:background="@drawable/rec_find"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/brand_name"
                android:textColor="@color/colorPrimaryDarkLetter"
                android:hint="Marca"
                android:textColorHint="@color/letter_cuad_in"
                android:layout_marginLeft="8dp"
                android:textSize="16sp"
                android:layout_gravity="center"
                />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35sp"
            android:layout_weight="1"
            android:visibility="gone"
            android:layout_marginRight="5dp"
            android:id="@+id/select_model"
            android:background="@drawable/rec_find"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/model_name"
                android:textColor="@color/colorPrimaryDarkLetter"
                android:textColorHint="@color/letter_cuad_in"
                android:hint="Modelo"
                android:layout_marginLeft="8dp"
                android:textSize="16sp"
                android:layout_gravity="center"
                />
        </LinearLayout>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:padding="4dp"
            android:id="@+id/balance"
            android:layout_gravity="center"
            android:src="@drawable/balance"

            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:id="@+id/line_recycler"
        android:layout_below="@+id/lineBrandType"
        android:layout_height="wrap_content">



        <androidx.recyclerview.widget.RecyclerView
            android:layout_centerHorizontal="true"
            android:id="@+id/recycler_view_grid_model"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:layout_below="@+id/line4"
            android:scrollbars="vertical"/>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_centerHorizontal="true"
            android:id="@+id/recycler_view_grid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"

            android:layout_below="@+id/line4"
            android:scrollbars="vertical"/>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_centerHorizontal="true"
            android:id="@+id/recycler_view_grid_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:layout_below="@+id/line4"
            android:scrollbars="vertical"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/empty"
        android:textSize="18sp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/line_recycler"
        android:visibility="gone"
        android:layout_gravity="center_horizontal"
        android:text="No hay productos para esta selecciÃ³n"


        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/list_products"
        android:layout_below="@+id/line_recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="35dp"
        />

</LinearLayout>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
    <LinearLayout
        android:layout_width="180dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_margin="8dp"
        android:background="@drawable/rec_find"
        android:layout_height="30dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_gravity="center"
            android:layout_marginLeft="8dp"
            android:textColor="@color/colorPrimaryDarkLetter"
            android:text="Cantidad:  "
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:id="@+id/quantity_prod"
            android:layout_gravity="center"
            android:textColor="@color/colorPrimaryDarkLetter"
            android:text=""
            />

    </LinearLayout>
</RelativeLayout>


