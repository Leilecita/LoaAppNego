<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.loa"
    >

    <uses-permission android:name="android.permission.INTERNET" />

    <uses-feature android:name="android.hardware.camera"
        android:required="true"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <uses-permission android:name="android.permission.CALL_PHONE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/santilo_round"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/santilo_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar"
        android:usesCleartextTraffic="true"
        >

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.example.android.loa"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths">

            </meta-data>
        </provider>

        <activity android:name="com.theartofdev.edmodo.cropper.CropImageActivity"

            android:theme="@style/Base.Theme.AppCompat"/>

        <activity android:name=".activities.MainActivity"
            android:configChanges="orientation|screenSize"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activities.CreateClientActivity"
            android:parentActivityName=".activities.MainActivity"
            />
        <activity
            android:name=".activities.CreateEmployeeActivity"
            android:parentActivityName=".activities.MainActivity"
            />
        <activity
            android:name=".activities.photos.PhotoEdithActivity"
            android:parentActivityName=".activities.MainActivity"
            />
        <activity
            android:name=".activities.photos.PhotoPosnetEditActivity"
            android:parentActivityName=".activities.MainActivity"
            />
        <activity
            android:name=".activities.OperationHistoryClientActivity"
            android:parentActivityName=".activities.MainActivity"
            />
        <activity
            android:name=".activities.HoursHistoryEmployeeActivity"
            android:parentActivityName=".activities.MainActivity"
            />
        <activity
            android:name=".activities.todelete.ExtractionsActivity"
            android:parentActivityName=".activities.MainActivity"
            />
        <activity
            android:name=".activities.todelete.BoxActivity"
            android:parentActivityName=".activities.MainActivity"
            />
        <activity
            android:name=".activities.LoadEmployeeHoursActivity"
            android:parentActivityName=".activities.MainActivity"
            />
        <activity
            android:name=".activities.EventHistoryActivity"
            android:parentActivityName=".activities.MainActivity"
            />
        <activity
            android:name=".activities.ClientsCreatedByEmployeeActivity"
            android:parentActivityName=".activities.MainActivity"
            />
        <activity
            android:name=".activities.CreateBoxActivity"
            android:windowSoftInputMode="stateHidden|adjustResize"
            android:parentActivityName=".activities.MainActivity"
            />
        <activity
            android:name=".activities.photos.BoxPhotoActivity"
            android:parentActivityName=".activities.MainActivity"
            />
        <activity
            android:name=".activities.photos.BoxPhotoPosnetActivity"
            android:parentActivityName=".activities.MainActivity"
            />


        <activity
            android:name=".activities.ProductsActivity"
            android:windowSoftInputMode="stateHidden|adjustPan"
            android:configChanges="orientation|screenSize"
            android:parentActivityName=".activities.MainActivity">

            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activities.balances.BalanceActivity"
            android:configChanges="orientation|screenSize"
            android:parentActivityName=".activities.MainActivity"
            />

        <activity
            android:name=".activities.LoginActivity"
            android:parentActivityName=".activities.MainActivity"
            />
        <activity
            android:name=".activities.RegisterActivity"
            android:parentActivityName=".activities.MainActivity"
