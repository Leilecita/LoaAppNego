            />
        <activity
            android:name=".activities.PriceEventsActivity"
            android:parentActivityName=".activities.MainActivity"
            />
        <activity
            android:name=".activities.PriceManagerActivity"
            android:parentActivityName=".activities.MainActivity"
            />
        <activity
            android:name=".activities.BuyProductsActivity"
            android:parentActivityName=".activities.MainActivity"
            />
        <activity
            android:name=".activities.StatisticsActivity"
            android:windowSoftInputMode="stateHidden|adjustPan"
            android:screenOrientation="portrait"
            android:parentActivityName=".activities.MainActivity"
            />
    </application>

</manifest>